        <underline language="IT" method="pen" text="fatti i nostri" type="straight"/>
        <underline language="IT" method="pen" text="sedere" type="double"/>
        <underline language="IT" method="pen" text="veniuano poi a baciar loro i piedi, &amp; le mani" type="straight"/>
