        <underline language="IT" method="pen" text="CCCLX huomini à piedi, &amp; XIIII a cauallo, accioche scorresse con" type="straight"/>
        <underline language="IT" method="pen" text="l'Isola, riducendola al seruigio" type="straight"/>
        <underline language="IT" method="pen" text="all'obedienza de' Christiani" type="straight"/>
        <underline language="IT" method="pen" text="prouincia di Cibao" type="straight"/>
        <underline language="IT" method="pen" text="dalla quale si aspettaua" type="straight"/>
        <underline language="IT" method="pen" text="principale utile, esseguì il tutto" type="straight"/>
        <underline language="IT" method="pen" text="come prima" type="double"/>
        <underline language="IT" method="pen" text="alla Vega" type="double"/>
        <underline language="IT" method="pen" text="&amp; pacificar l'Isola" type="double"/>
        <underline language="IT" method="pen" text="anzi fu cagione" type="triple"/>
        <underline language="IT" method="pen" text="discordie, &amp; partialità" type="straight"/>
        <underline language="IT" method="pen" text="obedissero a' suoi commandamenti" type="straight"/>
        <underline language="IT" method="pen" text="mandar loro lettere" type="straight"/>
        <underline language="IT" method="pen" text="di farsi a tutti superiore" type="straight"/>
        <underline language="IT" method="pen" text="s'imbarcò ne' primi nauigli, che uennero di Castiglia" type="straight"/>
        <underline language="IT" method="pen" text="ordine alcuno" type="double"/>
        <underline language="IT" method="pen" text="sopra la gente" type="straight"/>
        <underline language="IT" method="pen" text="Da che successe, che ciascuno andò fra gl'Indiani, doue piu gli piacque, togliendo lor la robba" type="straight"/>
        <underline language="IT" method="pen" text="&amp; le donne" type="triple"/>
        <underline language="IT" method="pen" text="loro tanti dispiaceri, che gl'Indiani" type="straight"/>
