        <marginalia anchor_text="perseuerasse nell'amicitia de' Christiani" hand="Italian" method="pen">
            <language ident="EN">
                <position book_orientation="0" place="head">
                    <marginalia_text>Guacanagari consta[n]t in frendship to the Christians.</marginalia_text>
                    <person name="Guacanagarix"/>
                </position>
            </language>
        </marginalia>
        
        <marginalia anchor_text="Guacanagari" hand="Italian" method="pen">
            <language ident="EN">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Guacanagari</marginalia_text>
                    <person name="Guacanagarix"/>
                </position>
            </language>
        </marginalia>
        
        <marginalia anchor_text="Beechio gli hauea amazzata una sua donna, &amp; Caunabo gliene hauea tolta un'altra" hand="Italian" method="pen">
            <language ident="EN">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>One of Guacanaryes concubines slayne and an other taken by force.</marginalia_text>
                    <person name="Guacanagarix"/>
                </position>
            </language>
        </marginalia>
        
        <marginalia anchor_text="intendendo esser uero" hand="Italian" method="pen">
            <language ident="EN">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Note the truth in Guacanagari</marginalia_text>
                    <person name="Guacanagarix"/>
                </position>
            </language>
        </marginalia>
        
        <marginalia hand="Italian" method="pen">
            <language ident="EN">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>No Iustice etc.</marginalia_text>  <!-- JG: Unsure about words/letters after justice-->
                </position>
            </language>
        </marginalia>
        
        <marginalia anchor_text="MCCCCXCV" hand="Italian" method="pen">
