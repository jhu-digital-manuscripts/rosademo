        <marginalia anchor_text="Diego Ortiz" hand="Italian" method="pen">
            <language ident="IT">
                <position book_orientation="0" place="tail">
                    <marginalia_text>Diego Ortiz</marginalia_text>
                    <person name="Diego Ortiz"/>
