            </language>
        </marginalia>
        
        <underline language="IT" method="pen" text="che i Re non erano lauoratori, ne mercatanti, ne voleuano quelle terre per loro vtile: ma" type="straight"/>
        <underline language="IT" method="pen" text="aiuto de' lor buoni sudditi" type="straight"/>
        <underline language="IT" method="pen" text="vendendo" type="double"/>
        <underline language="IT" method="pen" text="li due terzi" type="straight"/>
        <underline language="IT" method="pen" text="meno di quel, che valeuano" type="double"/>
        <underline language="IT" method="pen" text="cose di giustitia, ne hauea altro rispetto, che di farsi ricco, &amp; acquistar la gratia" type="straight"/>
        <underline language="IT" method="pen" text="che armata manu cercasse di liberar l'Ammiraglio" type="straight"/>
        <underline language="IT" method="pen" text="ottenuto piu facilmente il castigo di cosi fatta persona, &amp; rimedio al torto, che" type="straight"/>
        <underline language="IT" method="pen" text="lasciò d'imprigionarlo co' suoi" type="straight"/>
        <underline language="IT" method="pen" text="suonando con corni presso" type="straight"/>
        <underline language="IT" method="pen" text="per li cantoni molti libelli infamatorij" type="straight"/>
        
        <mark method="pen" name="comma" place="intext" text="nome vendendo"/>
        <mark method="pen" name="comma" place="intext" text="tutto dall"/>
        
