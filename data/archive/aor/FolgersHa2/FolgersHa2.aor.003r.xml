	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>Qui Venerem nescit, nescit mollitiem, teneritatem,
						lassitudinem, aestus languorem,  
					</marginalia_text>
					<person name="Venus"/>
				</position>
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						frigoris asperitatem, inediam, 
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						sitim, multas lascivorum a[e]gritudines, plurima
					</marginalia_text>
				</position>
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						aêris, vigiliarum, aliorumq[ue] accidentium incommoda, quae
					</marginalia_text> 
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						luxuriosis videntur peracerba, et propè intolerabilia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who does not know Venus, does not know softness, tenderness, weariness, 
				the fatigue of agitation, the harshness of cold, starvation, thirst, the many afflictions
				of wanton men, the most troublesome things of money, sleeplessness, and other 
				circumstances, which seem very harsh and nearly intolerable to immoderate men. 
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						ridicolo.)
					</marginalia_text>
				</position>
			</language>
			<translation>
				Ridiculous.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						Moll[io] dura omnia: |duro durum nihil. Iucundo
						nihil acerbius: acerbo nihil iucundius.
					</marginalia_text>
				</position>
			</language>
			<translation>
				I soften all hard things: I harden nothing hard. I make agreeable nothing harsher:
				I make disagreeable nothing more pleasant.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						He is the tallest man, that hath the tallest minde, &amp; the highest Witt.                         
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="intext">
					<marginalia_text>discretamente.</marginalia_text>
				</position>
			</language>
			<translation>
				Discreetly.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">	
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						distinctio ciuilis plurimi in mundo vsus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A polite distinction of many uses in this world.
			</translation>
		</marginalia>
		
		<marginalia anchor_text="Pronto." hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						dextrè.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Skillfully.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						prose quisq[ue], quarto modo.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Whoever in prose, in the fourth mode. <!-- CG: I really haven't a clue to what this might be. --> <!--JG: Beats me; I might just send an email to the group after having collected several Latin phrases about which we are unsure-->
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						| He is a noble man, that hath a noble minde, &amp; an honorable Witt.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Quotidie assuescere, summum robusti, agilisq[ue] viri bonum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				To accustom one's self daily, the highest good of the robust and agile man.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						s[upr]a )
					</marginalia_text>
				</position>
			</language>
			<translation>
				[See] above.
			</translation>
		</marginalia>
		
