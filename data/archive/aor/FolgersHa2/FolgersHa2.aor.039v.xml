	<annotation>
		<!-- Marginalia -->
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Vnici ars, et Virtus specifica, 
					</marginalia_text>
				</position>
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						appropriata, Singularis.
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				The art of the unique man, and the specific and appropriate virtus of the singular man.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Singula
					</marginalia_text>
				</position>
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						pura,
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						et nitida: incorrupta, et strenua.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Individual things pure and clear; uncorrupted and vigorous.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						Totum forte: et partes valida[e].
						Nihil fractum, aut languidum; aut vllo modo tepidum.					
					</marginalia_text>
				</position>
			</language>
			<translation>
				Strong everywhere and powerful in each part.
				Nothing broken, or languid, or in any way tepid.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						s[upr]a.
					</marginalia_text>
				</position>
			</language>
			<translation>
				[See] above.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						Animus, optimus Medicus Corporis: et
						maximus Faber fortuna[e]. Ni degener.
					</marginalia_text>
					<emphasis method="pen" text="Animus" type="straight"/>
					<emphasis method="pen" text="Corporis" type="straight"/>
					<emphasis method="pen" text="fortuna[e]" type="straight"/>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				The mind is the best doctor of the body and the greatest craftsman of fortune. Unless it is degenerate.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Miseret me mei, Si Fortius violentior: aut Ramus illustrior: aut Lipsius securior:
						aut Tycho peritior: aut Draco 
						validior: aut Bartasius diuinior 
						vllo modo.
					</marginalia_text>
					<person name="Joachim Fortius Ringelberg"/>
					<person name="Petrus Ramus"/>
					<person name="Lipsius"/>
					<person name="Tycho Brahe"/>
					<person name="Draco"/>
					<person name="Guillaume Du Bartas"/>
					<emphasis method="chalk" type="straight"/>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				I pity myself if, in any way, Fortius is more violent, Ramus more illustrious, 
				Lipsius more secure, Tycho more experienced, Draco more powerful, or Du Bartas more divine.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Animus est, qui facit foelicem, aut miserum.
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				The mind is that which makes one either happy or wretched.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Euthymia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Euthymia.
			</translation>
		</marginalia>
		
		
