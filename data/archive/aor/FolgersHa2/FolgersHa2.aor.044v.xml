	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Oportet artificem artificum, et actorem actorum,
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						vnicè habere artes artiu[m], et
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						virtutes virtutum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				It is necessary for the greatest of artists and the greatest of actors to possess
				the greatest of arts, and the greatest of virtues.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Id[que] leui pollicè.
					</marginalia_text>
				</position>
			</language>
			<translation>
				And this with a light touch.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						dextrè
					</marginalia_text>
				</position>
			</language>
			<translation>
				Skillfully.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						) Nihil prudentius
					</marginalia_text>
				</position>
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						aut
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						dulcius: nihil efficacius, aut Lautius.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Nothing more prudent or more sweet: nothing more effective or more elegant.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Eutrapelus, hominum
						eloquentissimus, et prudentissimus: actuosissimus, et
					</marginalia_text>
					<person name="Eutrapelus"/>
					<emphasis method="chalk" type="straight"/>
				</position>
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						suauissimus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Of men, Eutrapelus is the most eloquent and most prudent, the most 
				active and the most charming.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Mundi excellentissima Creatura.
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				The most excellent creature in the world.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Animo pra[e]sentissimus: spiritu clarissimus:
						voce explanatiss[imus]: accentu significantiss[imus]
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				Most outstanding in mind, most bright in spirit, most clear in voice, most expressive in tone.
			</translation>
		</marginalia>

		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Nullu[m] unq[uam] Mercurialis tam [vidi tam] dextrè,
						proprieq[ue] Mercuriale quàm Eutrapelum.
					</marginalia_text>
					<person name="Eutrapelus"/>
				</position>
			</language>
			<translation>
				Yet I never saw anything so Mercurial, and so skillfully Mercury-like, as Eutrapelus. <!-- Unclear. -->
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						In amaro dulcis. Aut digito compesce Labellu[m]. Quicquid odiosu[m], Noli me
						tangere.
					</marginalia_text>
					<X-ref book_title="Bible" language="LA" person="John" text="Noli me tangere"/> <!-- John 20:17-->
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				Sweet in bitterness. Or restrain the lip with a finger. Whatever is distasteful, "do not touch me".
			</translation>
		</marginalia>


