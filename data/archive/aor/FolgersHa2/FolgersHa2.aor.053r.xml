	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Homo omnium horaru[m]: philosophus ad omnia quare: 
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						) actor ad Singula
						dexterrimus: ad omnia Maturimus. Primo Prior:
						postremo posterior: vnus instar omnium.
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				A man for all seasons: a philosopher therefore for all things;
				a most capable actor for singular matters: most timely in all things.
				Ahead in the beginning, last at the end; one worth all the rest.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						à pari.
					</marginalia_text>
				</position>
			</language>
			<translation>
				From similar propositions.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						s[upr]a /
					</marginalia_text>
				</position>
			</language>
			<translation>
				[See] above.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						( His duobus,
					</marginalia_text>
				</position>
			</language>
			<language ident="IT">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						La Corte, la sorte.
					</marginalia_text>
				</position>
			</language>
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Illis duobus millibus,
					</marginalia_text>
				</position>
			</language>
			<language ident="IT">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						La Corte, La morte.
					</marginalia_text>
				</position>
			</language>
			<translation>
				With these two: court and fate;
				With those two thousand: court and death.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						argutè.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Cleverly.	
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						) Semper ad apices Eutrapelus, et ad puncta punctorum.
					</marginalia_text>
					<person name="Eutrapelus"/>
				</position>
			</language>
			<translation>
				Eutrapelus is always at his best and at the point of points. 
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						The onlie surprising Witt, toung, hand,
						foote, &amp; sowle of the World.
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Quicquid dici, aut fieri oportet, id esto Summum bonum. 
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				Whatever needs to be said or done, let it be for the highest good.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Aristotelis technis Oeconomicis. Gandinus nullo modo potest carere. 
					</marginalia_text>
					<person name="Aristotle"/>
					<person name="Marcantonio Gandino"/>
					<book title="Economics"/>
				</position>
			</language>
			<translation>
				With the techniques of Aristotle's Economics, Gandino could lack nothing at all.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Nec potest Juresconsulti Domenicus, carere Sylua Nuptiali. 
					</marginalia_text>
					<person name="Lodovico Domenichi"/>
					<book title="Sylva nuptialis"/>
				</position>
			</language>
			<translation>
				Nor could Domenichi lack anything in law with the Sylva Nuptialis.
			</translation>
		</marginalia>
		
