		<marginalia hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="head">
					<marginalia_text>
						{ Tre hore d'oro. Ritratti: prologi: vale-mondo.	
					</marginalia_text>
				</position>
			</language>
			<translation>
				Three hours of gold. Portraits, prologues, farewells.
			</translation>			
		</marginalia>
		<marginalia date="1582" hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						Ritratti di diuersi prencipi, e personaggi illustri:
						di mano di Francesco
					</marginalia_text>
					<book title="Ritratti di diversi principi et personaggi illustri"/>
				</position>
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						Guicciardini.
					</marginalia_text>
					<person name="Francesco Guicciardini"/>
				</position>
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Quattro prologhi di quattro Comedie dell'Aretino.
						Col Vale-mondo di Gueuara. Lo specchio
						del mondo.
					</marginalia_text>
					<person name="Pietro Aretino"/>
					<person name="Antonio de Guevara"/>
				</position>
			</language>
			<language ident="ES">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Poco, y bueno. 1582.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Portraits of various princes and illustrious men written by Francesco Guicciardini.
				Four prologues of four comedies by Pietro Aretino.
				With the farewell of Guevara. The mirror of the world.
				Little and good. 1582.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Philomela eandem canit cantilenam; sed Canticum Canticorum.
					</marginalia_text>
					<person name="Philomela"/>
				</position>
			</language>
			<translation>
				Philomela sings the same tune, yet the Song of Songs.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Virum quae[r]o sublimatum: et Artem, Virtutemq[ue] multiplicatam
						spagyricè.
					</marginalia_text>
				</position>
			</language>
			<translation>
				I seek an elevated man, as well as art and virtue multiplied alchemically.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="left_margin">
					<marginalia_text>
						Plenus est Sententiaru[m], qui nouit 4. virtutes.
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who knows the four virtues is full of ways of thinking.
			</translation>
		</marginalia>
		
