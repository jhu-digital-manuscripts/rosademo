	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Exquitissima[e] mundi Sententia[e], et acerrima[e].
					</marginalia_text>
				</position>
			</language>
			<translation>
				The most pointed and exquisite thoughts of the world.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Mimi sublimati.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Elevated mimes.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Fortuna[e] adde:
						Corpori adde, adde:
						Animo adde,
						adde, adde.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Add to fortune.
				Add, add to the body.
				Add, add, add to the soul.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						( Nemo vir,  nisi qui satagit ultra virum.)
					</marginalia_text>
				</position>
			</language>
			<translation>
				No one is a man, save he who busies himself more than a man.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Anadiplosis bonorum.
						Climax Pantagathi.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A folding up of good things.
				A climax of all good things.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						s[upr]a /
					</marginalia_text>
				</position>
			</language>
			<translation>
				[See] above.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Grata breuitas: nouitas:
						varietas.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Brevity is pleasing; novelty; variety.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Anima, coeli, terra[e]q[ue] 
						) magnes.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The soul of heaven and the loadstone of the earth.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Vnicus animi, corporis, fortuna[e] faber.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The sole workman of the mind, body and fortune.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Solus faber trismegistus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The sole thrice-great workman.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Axiophili est, exquisitissimas Artium gnomas; et accuratissima Virtutum
						apophthegmata; in suis dictis, scriptisq[ue] passim interspergere.
					</marginalia_text>
					<person name="Axiophilus"/>
				</position>
			</language>
			<translation>
				To Axiophilus belongs the scattering here and there in his sayings and writings of the most exquisite
				maxims of the arts and the most accurate aphorisms of virtue.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Quicquid infirmat corpus, aut animum; absolutè contemnatur, et serio
						fugiatur, tanq[uam] pestis, aut ipsa mors. Noli me tangere.
					</marginalia_text>
					<X-ref book_title="Bible" language="LA" person="John" text="Noli me tangere"/>
				</position>
			</language>
			<translation>
				Whatever weakens the body or the mind must be condemned absolutely and earnestly
				avoided like the plague or even like death itself. "Do not touch me."
			</translation>
		</marginalia>
		
