	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Ex abundantia Cordis, os loquitur. È bibliotheca tui ipsius
					</marginalia_text>
					<X-ref book_title="Gospel of Matthew" language="LA" person="Matthew" text="ex abundantia enim cordis os loquitur"/>
				</position>
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						pectoris, peritissima[e] Sententia[e].
					</marginalia_text>
				</position>
			</language>
			<translation>
				"The mouth speaks due to the abundance of the heart." The most expert opinions
				from the library of your very own breast.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						dilemma retortum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The dilemma of the retort.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Deficiente spiritu, aut etiam paulisper languescente;
						statim omnia animi,
						corporisq[ue] bona flaccescunt.
					</marginalia_text>
				</position>
			</language>
			<translation>
				By lacking in spirit, or even languishing for a little while,
				all good things of the mind and body wither immediately.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						) Quotidiè pra[e]stantior.
					</marginalia_text>
				</position>
			</language>
			<translation>
				More excellent every day.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						{ Dimidium foelicitatis, Alacritas: et Virginitas,
						immortalitatis dimidium. ex arcanis Eudromi.
					</marginalia_text>
					<person name="Eudromus"/>
				</position>
			</language>
			<translation>
				Half of happiness is cheerfulness, and half of immortality is virginity.
				From the secrets of Eudromus.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						risoluto.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Resolute.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						( Ex teipso auctore singula:
						quotiès opus. )
					</marginalia_text>
				</position>
			</language>
			<translation>
				Single matters from you yourself as author: a daily task.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Citò perficitur, quod nauiter efficitur. Viru[m] probat virtus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Whatever is diligently begun is immediately finished. Virtue proves the man.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Gnomologi multi: paucissimi Mimologi.
					</marginalia_text>
				</position>
			</language>
			<translation>
				There are many who study wisdom [gnomologists], and few who study mimes [mimologists]. 
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="right_margin">
					<marginalia_text>
						Ex viva[e] mentis visceribus, fluentissima[e] sententia[e], et profundiss[im]a[e].
						De viuo fonte quatuor Virtutu[m], Ethica[e]: quatuor Elementoru[m], Physica[e].
					</marginalia_text>
					<emphasis method="pen" text="viua[e] mentis visceribus" type="straight"/>
					<emphasis method="pen" text="fluentissima[e] sententia[e]" type="straight"/>
					<emphasis method="pen" text="profundiss[im]a[e]" type="straight"/>
					<emphasis method="pen" text="quatuor Virtutu[m]" type="straight"/>
					<emphasis method="pen" text="quatuor Elementoru[m], Physica[e]" type="straight"/>
				</position>
			</language>
			<translation>
				The most profound and flowing ideas from the innermost part of a living mind.
				Ethics, regards the living source of the four Virtues; Physics, [regards the living source of] the four elements.
			</translation>
		</marginalia>
		
