	<page filename="FolgersHa2.094v.tif" pagination="12" reader="Harvey" signature="[A6v]"/>	<!-- ABO 99left -->
	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Stultus est, qui non sapit sine Libris.
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who knows nothing without books is a fool.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Magistratus, lex loquens: sapiens, animata
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						bibliotecha. Omnes in 
						Ca[e]sare manes. In vno omnes Magni.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The magistrate, a speaking law; the wise man, a living library.
				Everything is in the hands of Caesar. Everything in one great man.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Da mihi talem Amorem in Artibus, et Virtutibus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Give me such love in the Arts and Virtues.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Sera nimis Vita est crastina: viue hodiè.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The life of tomorrow is too late; live today.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Cupido, flammis armatus: apud poetas.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Cupid is armed with flames, according to the poets.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Omnem excedit amor, visq[ue] coacta modum. Axiophilus.
						Sapiens, sibi Microcosmus; et Vnus, Omnia. Ca[e]tera, sibi parerga.
					</marginalia_text>
					<person name="Axiophilus"/>
				</position>
			</language>
			<translation>
				Love exceeds all, and strength compels the manner. Axiophilus.
				The wise man, a Microcosm for himself; and one, all things.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Eccentrica quot, et
					</marginalia_text>
				</position>
				<position book_orientation="270" place="tail">
					<marginalia_text>
						quanta?
					</marginalia_text>
				</position>
			</language>
			<translation>
				Eccentric matters: how many and to what degree?
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="left_margin">
					<marginalia_text>
						Sapiens Theodori, Aristippi, Aristotelis, Epicuri, filius huius seculi: qualis etiam
						interdum, Sapiens Antisthenis, Diogenis, Zenonis, ipsiusq[ue] etiam Platonis.
					</marginalia_text>
					<person name="Theodorus the Atheist"/>
					<person name="Aristippus"/>
					<person name="Aristotle"/>
					<person name="Epicurus"/>
					<person name="Antisthenes"/>
					<person name="Diogenes of Sinope"/>
					<person name="Zeno of Citium"/>
					<person name="Plato"/>
					<emphasis method="pen" text="Sapiens Theodori" type="straight"/>
					<emphasis method="pen" text="filius huius seculi" type="straight"/>
					<emphasis method="pen" text="Sapiens Antisthenis" type="straight"/>
				</position>
			</language>
			<translation>
				The philosopher of Theodorus, Aristippus, Aristotle, Epicurus is the child of this generation,
				indeed, just now and then the philosopher of Antisthenes, Diogenes, Zeno, and even Plato himself.
			</translation>
		</marginalia>
		
