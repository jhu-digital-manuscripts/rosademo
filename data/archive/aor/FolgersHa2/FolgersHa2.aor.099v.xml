	<annotation>
		<!-- Marginalia -->
		<marginalia book_id="FolgersHa2" hand="Italian" id="Ha2.099v_0001" marginalia_continues_to="Ha2.100r_0001" marginalia_to_transcription="Ha2.100r.xml">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						{ Pro vno Amico singula: [B4[r]: { In vnum Hostem omnia.]
							<!-- Continues onto facing page, head, Ha2.100r -->
					</marginalia_text>
				</position>
			</language>
			<translation>
				Singular things on behalf of one friend: [B4[r]: All things against one enemy.]
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Sibi quisq[ue], plus quàm omnes
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Historia[e].
					</marginalia_text>
				</position>
			</language>
			<translation>
				Each person relies on himself, more than on all other men in history.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						In campos Esdras ieiunus: cum suis Libris.
					</marginalia_text>
					<person name="Ezra"/>
				</position>
			</language>
			<translation>
				Ezra fasting in the fields with his books.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Jehu in campos;
						cum suis instrumentis: etiam ieiunus.
					</marginalia_text>
					<person name="Jehu"/>
				</position>
			</language>
			<translation>
				Jehu in the fields with his instruments, fasting as well.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						{ Necessaria cuiusq[ue] artis Principia, et ipsa Opera,
						statim possunt edisci:
						{ Ca[e]tera sequuntur omnia sua sponte.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Those necessary matters of which the principles of art, and the works themselves,
				can immediately be learned by heart.
				All other things follow willingly.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						) Pro Micro[cosmo]
						Trismegisti.
					</marginalia_text>
					<person name="Hermes Trismegistus"/>
				</position>
			</language>
			<translation>
				On behalf of Trismegistus' microcosm.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Ludum, iocumq[ue] dices
						fuisse illum alteru[m] (ne Fortium quidem excipio),
						pra[e]ut huius rabies qua[e] dabit. Omnes
						Furia[e], Ciphra[e], ad Hyperca[e]sarem.
					</marginalia_text>
					<person name="Joachim Fortius Ringelberg"/>
					<person name="Julius Caesar"/>
					<X-ref book_title="Eunuchus" language="LA" person="Terence" text="Ludum, iocumq[ue] dices fuisse illum alteru[m]"/>
				</position>
			</language>
			<translation>
				"You will say that the other one was fun and games" (I will not except even Fortius) <!-- CG: Parenthetical comment is unclear here. --> <!--JG: Yep, but leave for the time being. Can't come up with anything better at the moment-->
				"in comparison with (the havoc) which this one's frenzy will create."
				All are Furies and Cyphers to Super-Caesar.
			</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Meus Dominus, succinctus ad Finem: et potentissimorum
						Mediorum pra[e]parator, longè, latè, profundeq[ue]						
					</marginalia_text>
				</position>
				<position book_orientation="90" place="intext">
					<marginalia_text>
						subtilissimus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				My lord, equipped for his goal, is most subtle in the far-reaching, wide-ranging, and most profound preparations of his most potent means.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Nihil omnia Mundi exempla, pra[e] vnico exemplari, id est, Teipso.
						Mnemosyna Mnemosynorum. Aut Ca[e]sar: aut Cato: aut Crassus.
					</marginalia_text>
					<person name="Julius Caesar"/>
					<person name="Cato the Elder"/>
					<person name="Marcus Licinius Crassus"/>
				</position>
				<position book_orientation="270" place="intext">
					<marginalia_text>
						Caput Achitophelis:
						manus aut Jehu,
						aut Esdra[e].
					</marginalia_text>
					<person name="Ahitophel"/>
					<person name="Jehu"/>
					<person name="Ezra"/>
				</position>
			</language>
			<translation>
				All the examples of the world are nothing, except the one examplar that is you yourself.
				The reminder of reminders. Either Caesar, Cato, or Crassu.
				The head of Ahitophel, either the hand of Jehu or Ezra.
			</translation>
		</marginalia>
		
