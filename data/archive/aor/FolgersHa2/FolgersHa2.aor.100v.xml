	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Ars Naturâ, et Exercitatione solidescit.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Art, Nature, and Exercise solidify.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						As merrie as Sir Thomas More:
						as youthfull as Sir Francis Brian.
					</marginalia_text>
					<person name="Thomas More"/>
					<person name="Francis Bryan"/>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Plurimu[m] valent
						Coma Occasionis, et cuiusq[ue] rei ansa dexterrima.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Most valuable are the hair of Occasion and the most agile opportunity in every matter. 
					<!-- CG: Marginalia refers to the preceding text, which describes the hair of the goddess 'Occasion'. -->
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Stultus
					</marginalia_text>
				</position>
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						est sapiens,
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						cu[m]
					</marginalia_text>
				</position>
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						in bonam
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						partem consulit
						Omnia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Foolish is the wise man when he consults all things in great part.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						/ ( Sol in Scorpione, Sol ).
					</marginalia_text>
				</position>
			</language>
			<translation>
				The sun in Scorpio, the sun.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Art, or not art,
						Nature, &amp; Exercise will hold their owne.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Magis flagrans Opifex, quàm ipse Vulcanus. 
					</marginalia_text>
					<person name="Vulcan"/>
				</position>
			</language>
			<translation>
				The Workman burns more than Vulcan himself.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						All harsh crudities I disgest with a iest. I beare with
						Him: but beare Him in minde.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="left_margin">
					<marginalia_text>
						Quotiès ipse obseruaui, potentiorem esse, Natura[e] et Exercitationis
						Valorem, quàm Artis.
					</marginalia_text>
				</position>
			</language>
			<translation>
				How often I myself observed that the value of nature and exercise is more potent than that of art.
			</translation>
		</marginalia>
		
