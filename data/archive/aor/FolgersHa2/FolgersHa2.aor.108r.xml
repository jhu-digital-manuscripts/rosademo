	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Igneus est ollis vigor, et coelestis origo.
						Axiophili tandem Emblema.
					</marginalia_text>
					<person name="Axiophilus"/>
					<X-ref book_title="Aeneid" language="LA" person="Virgil" text="Igneus est ollis vigor et coelestis origo"/>
				</position>
			</language>
			<translation>
				"There is a fiery vigor in them and a celestial origin."
				At last, the device of Axiophilus.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						/ Simplicitie
						Wrangles about trifles: iudgment
						) contemnes common
						debates, &amp;
						scornes a thousand quarrels.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Mulier perpaucarum Mulierum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A woman of very few women.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Singula vel potentiùs, vel dexteriùs.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Singular matters either more effectively or more skillfully.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Omnia in Xenophonte, et Ca[e]sare expedita, et quasi sua sponte fluentia. Nihil affectatum. Summa eorum laus 
					</marginalia_text>
					<person name="Xenophon"/>
					<person name="Julius Caesar"/>
				</position>
				<position book_orientation="90" place="intext">
					<marginalia_text>
						in claritate, prudentia, vigore.
					</marginalia_text>
				</position>
			</language>
			<translation>
				In Xenophon and Caesar all things are let loose and flow as if of their own accord. Nothing affected.
				Their highest praise lies in clarity, prudence, and vigor.
			</translation>
		</marginalia>
			
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Artifex ille est peritus, qui singulas sui corporis, animiq[ue] partes, uel
						fortiores facit, vel saltem dexteriores, quàm sunt aliorum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Skilled is that artist who makes the singular parts of his body and mind stronger, or at least more dexterous than those of other people.
			</translation>
		</marginalia>
		
