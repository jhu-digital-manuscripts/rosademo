	<page filename="FolgersHa2.114r.tif" pagination="51" reader="Harvey" signature="D2[r]"/>	<!-- ABO 118right -->
	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="0" place="head">
					<marginalia_text>
						It is one of the new fashions: Teach him but halfe
						that you knowe: &amp; he wilbe twise
					</marginalia_text>
				</position>
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						as good a man, as Yourself.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						When they need
					</marginalia_text>
				</position>
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						you,
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						excellent frends: when you need them, Ciphers, or shadowes.
						No performance: but excuses, &amp; words like emptie clowdes.
						Sum wind: but no effect.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						( Valeant, abeant, qua[e]cunq[ue] non possunt plùs.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Whoever can not do more, may say goodbye and leave.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						scitè.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Knowingly.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Piu vento, che valore: humore di questo mondo.	
					</marginalia_text>
				</position>
			</language>
			<translation>
				More wind than valor, such is the humor of this world.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">	
					<marginalia_text>
						Quisq[ue] à seipso dependeat: aut seipsu[m] suppendeat.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Let each man depend on himself, or let him hang himself.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Qui moccat, moccabitur. Spernentes spernendi pulcherrimè.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Whoever mocks, shall be mocked. The scorners must be prettily scorned.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Ad foelicis iter, nullibi sera via est.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The tardy road is nowhere near the path of the happy man.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="right_margin">
					<marginalia_text>
						Qui metuens viuit, Liber mihi non erit vnq[uam].
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who lives in fear shall never be a book for me.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						He that can not liue upon himself, may go hange himself.						
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
