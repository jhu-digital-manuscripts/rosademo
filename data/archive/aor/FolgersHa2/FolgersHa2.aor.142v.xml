	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Optima maxima mundi doctrina: Nihil omittere,
						quod valet
					</marginalia_text>
				</position>
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						ad animi, corporis,
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						aut fortuna[e] cultum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The best and greatest teaching of the world: to omit nothing
				of value in terms of the cultivation of the mind, body, and fortune.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						( Problema politicum, in regijs Consilijs
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						frequenter 
						( agitatum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A political problem: being frequently animated in royal counsels.  
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						Adhuc augenda Singula: illustranda omnia.
						Quantum vlla Sublimari potest essentialis dignitas.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Singular matters must still be increased; all things must be illuminated.
				So much as any essential dignity can be elevated.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						Nihil suprà. Vel olim: vel hodiè:
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						vel posthac unq[uam].
					</marginalia_text>
				</position>
			</language>
			<translation>
				Nothing above. Either once upon a time, or today, or ever after.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						dilemma politicum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A political dilemma.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Verus amor nullu[m] nouit habere modum: vlteriùs:
						et adhuc vlteriùs: quantu[m] ulla facultas excellendi.
					</marginalia_text>
				</position>
			</language>
			<translation>
				True love knows no limit; it goes further and still further, 
				as much as any other faculty of excelling. 	
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Viri est singularis, omnes excellere, in singulis partibus Excellendi.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The singular man must surpass all other men and excel in all his individual parts.
			</translation>
		</marginalia>
		
