	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Aduocatus Maranta[e], et Durandi: Agrippa[e], et Hotomani:
						Aula[e] Alphonsina[e], et Rota[e] Romana[e].
					</marginalia_text>
					<person name="Roberto Maranta"/>
					<person name="Guillaume Durand"/>
					<person name="Heinrich Cornelius Agrippa"/>
					<person name="Francois Hotman"/>					
				</position>
			</language>
			<translation>
				The lawyer of Maranta and Durand; of Agrippa and Hotman;
				of the Alfonsian court and of the Apostolic court. 
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						In omni causa victor, vt 
						) Carneades: foriq[ue] rex,
					</marginalia_text>
					<person name="Carneades"/>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						M. Tullius, in flore dominantis Roma[e].
					</marginalia_text>
					<person name="Cicero"/>
				</position>
			</language>
			<translation>
				Cicero, a victor in every case, like Carneades, and a king in the forum
				during the flourishing of Rome's domination.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Vtinam Belleurus adesset. Adest:
						et vincitur. Vt a fulminante Achille tonans Hector:
					</marginalia_text>
					<person name="Jean de Bellièvre"/>
					<person name="Achilles"/>
					<person name="Hector"/>
					<X-ref book_title="Quaestionum illustrium" language="LA" person="Francois Hotman" text="Belleurus adesst"/>
				</position>
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						aut ab acerrimo Ænea
						turbulentus Turnus.
					</marginalia_text>
					<person name="Aeneas"/>
					<person name="Turnus"/>
				</position>
			</language>
			<translation>
				"If only Bellerus were present!" 
				He is present, and he is beaten,
				just like Hector was beaten by a fulminating Achilles,
				or boisterous Turnus by violent Aeneas.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Adamantinus aduocatus: Supra ipsum Proa[e]resiu[m],
					</marginalia_text>
					<person name="Prohaeresius"/>
				</position>
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						omnium Supremu[m].
					</marginalia_text>
				</position>
			</language>
			<translation>
				An adamantine lawyer, above Prohaeresius himself, the most supreme of all.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Facilè omnium et prudentissimus, et eloquentia fluentiss[im]us
					</marginalia_text>
				</position>
				<position book_orientation="0" place="right_margin">
					<marginalia_text>
						et ipso effectu actuosissim[us].
					</marginalia_text>
				</position>
			</language>
			<translation>
				Easily both the most prudent of all, the most fluent in eloquence,
				and the most active in the exectution itself.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Singulis punctis acutissimus: et ad vivum penetratiss[imus].
					</marginalia_text>
				</position>
			</language>
			<translation>
				The most acute in singular points, and the most penetrating to the quick.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						( Ha[e]c maximè necessaria fluunt ad vnguem.)
					</marginalia_text>
				</position>
			</language>
			<translation>
				These necessary matters especially flow forth perfectly.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						He gallantly praiseth manie other bookes: but in effect onlie regardeth
						his original arts: &amp; final professions: with Gandins Stratagems.
					</marginalia_text>
					<person name="Marcantonio Gandino"/>
				</position>
			</language>
		</marginalia>
		
