	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						{ Semper dicendum, agendumq[ue], quàm potes optimè:
						et alijs quibuscunq[ue]
						meliùs: et teipso quotidiè excellentiùs.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Always speaking and acting as best as you can and better than all the others;
				and daily more excellent than yourself.
			</translation>
		</marginalia>
		
		<marginalia anchor_text="Piouvan' Arloto" hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Piouano.
					</marginalia_text>
					<person name="Pievano Arlotto"/>
				</position>
			</language>
			<translation>Pievano Arlotto.</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Pulcherrimum Artis, virtutisq[ue] certamen: et Sola diuina
						a[e]mulatio.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The most beautiful competition of art and virtue, and the sole divine emulation.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Liberè in Presbyteros.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Freely against the Presbyterians.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Generosissimorum animorum nobilissima Contentio,
						Artis, et Virtutis pra[e]stantia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A most noble struggle of the most generous spirits of art and the excellence of virtue. 
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Eris heroica.
						Zelus aurea[e] a[e]tatis.
					</marginalia_text>
					<person name="Eris"/>
				</position>
			</language>
			<translation>
				Heroic Eris.
				The zeal of the golden age.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Circumfertur Hermolai Barbari generosum Carmen:
						venter, pluma, Venus Laudem fugienda Sequenti. | 
					</marginalia_text>
					<person name="Ermolao Barbaro"/>
				</position>
			</language>
			<translation>
				The generous song of Ermolao Barbaro is published;
				"The belly; a feather bed; lust; one who seeks praise should run from these things."
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="FR">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Desir n'a repos.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Desire does not rest.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Jacta est alea: sed inuicti valoris.
					</marginalia_text>
					<X-ref book_title="De vita Caesarum" language="LA" person="Suetonius" text="Jacta est alea"/>
				</position>
			</language>
			<translation>
				"The die is cast," but of invincible valor.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						I. Vinum balsami. 2. Oleum balsami. 3. ipsum preciosum balsamum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				1. Balsam wine. 2. Balsam oil. 3. Precious balsam itself.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Virtus non curat gloriam, sed dignitatem.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Virtue cares not for glory, but dignity.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="left_margin">
					<marginalia_text>
						Miserescit succumbentium vllo modo.
					</marginalia_text>
				</position>
			</language>
			<translation>
				In any way, I take compassion on those who surrender. 
			</translation>
		</marginalia>
		
