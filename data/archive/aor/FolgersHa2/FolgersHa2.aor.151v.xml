	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Omnium peritissimus: singulorum paratissimus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The most expert of all men; the most prepared of singular men.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Mnemosynon Eudromi.)
					</marginalia_text>
					<person name="Eudromus"/>
				</position>
			</language>
			<translation>
				The reminder of Eudromus.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Igneus vigor, et propria tui vnius dexteritas.
						Sed ita
						tamen, vt facilè omniu[m] diligentissim[im]a.
					</marginalia_text>
				</position>
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						diligentia, quoda[m] modo negligens videatur.
						Id enim et magis
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Aulicu[m] est; et tua[e] vnius facilitati accomodatiss[im]u[m].
					</marginalia_text>
				</position>
			</language>
			<translation>
				A fiery vigor and a proper skilfulness are yours alone;
				however, in a way that the most diligent of all things are [done] easily.
				Diligence, let it seem like negligence in some way.
				For it also more courtly, and it is most suitable to your disposition alone.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Viuitur Ingenio.
					</marginalia_text>
				</position>
			</language>
			<translation>
				One lives by one's genius.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						( famoso Auuocato.	
					</marginalia_text>
				</position>
			</language>
			<translation>
				A famous lawyer.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="left_margin">
					<marginalia_text>
						In negociando tam promptissimus,
					</marginalia_text>
				</position>
				<position book_orientation="0" place="intext">
					<marginalia_text>
						quàm subtilissimus.
						Eudromi singulare elogium.
					</marginalia_text>
					<person name="Eudromus"/>
				</position>
			</language>
			<translation>
				In doing business: as most prompt as he is most subtle.
				The singular maxim of Eudromus.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						pragmatico argutiss[im]o.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A most clever pragmatic man.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Diuina in dictis, factisq[ue] faciltas.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A divine ability in words and deeds.
			</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						Ipsa[e] artes ad ungem maximéq[ue] ipsa[e] artificiosa[e]
					</marginalia_text>
				</position>
			</language>
			<language ident="EL">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						πραγματεῖαι.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The arts themselves, learned by heart, especially the artful practical matters themselves.
			</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Decori arte omnes excellit Eutrapelus. 
					</marginalia_text>
					<person name="Eutrapelus"/>
				</position>
			</language>
			<language ident="EL">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						θεοειδὴς.
					</marginalia_text>
				</position>
			</language>
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Spiritus, instar
					</marginalia_text>
				</position>
				<position book_orientation="270" place="intext">
					<marginalia_text>
						perfectionu[m] omnium.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Eutrapelus excels all men in decorous art. Godlike.				
				His spirit, an example for all other perfections.
			</translation>
		</marginalia>
		
