	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Quanta[e] Causa[e], tanti Effectus.
					</marginalia_text>
				</position>
			</language>
			<translation>As the causes are great, so are the effects.</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						risoluto.	
					</marginalia_text>
				</position>
			</language>
			<translation>Resolute.</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Pueri Laceda[e]mone: viri nusq[uam].
					</marginalia_text>
					<location name="Sparta"/>
				</position>
			</language>
			<translation>For a Spartan boy: never for a man.</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Socratica aliorum Obseruatio.
					</marginalia_text>
					<person name="Socrates"/>
				</position>
			</language>
			<translation>A Socratic observation of others.</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="IT">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Chi la dura, la vince.	
					</marginalia_text>
				</position>
			</language>
			<translation>No pain, no gain.</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Natura quotidiè corroboranda: Ars quotidiè augenda: Exercitatio, aut
					</marginalia_text>
				</position>
				<position book_orientation="270" place="intext">
					<marginalia_text>
						actio quotidiè
					</marginalia_text>
				</position>
				<position book_orientation="270" place="tail">
					<marginalia_text>
						perseque[n]da.
					</marginalia_text>
				</position>
				<position book_orientation="270" place="intext">
					<marginalia_text>
						Omnia quotidiè
					</marginalia_text>
				</position>
				<position book_orientation="270" place="tail">
					<marginalia_text>
						extende[n]da.
					</marginalia_text>
				</position>
				<position book_orientation="270" place="intext">
					<marginalia_text>
						Incrementi quotidiè reminisce[n]du[m].
					</marginalia_text>
				</position>
			</language>
			<translation>Nature must be strengthened daily: Art must be increased daily. Excercise, or action, must be pursued daily. Everything must be extended daily.
				Growth must be called to mind daily.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="left_margin">
					<marginalia_text>
						Telemachus; et Pyrrhus, statim egregij viri: quia Hoc agebant, quotidiana
						Confidentia, industria, a[e]mulatione maximorum Heroum.
					</marginalia_text>
					<person name="Telemachus"/>
					<person name="Pyrrhus of Epirus"/>
				</position>
			</language>
			<translation>Telemachus and Pyrrhus were extraordinary men immediately: because they did this with daily confidence, industry, and the emulation of the greatest heroes.</translation>
		</marginalia>
		
