	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="head">
					<marginalia_text>
						Vita[e] vitalis quotidiana restauratio.
					</marginalia_text>
				</position>
			</language>
			<translation>A daily restauration of a vital life.</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Hebes est, qui non est subtilior Scoto.
						Rudis est, qui non est callidior Durando.
						Simplex est Politicus, qui non est
						Bodino, Lipsioq[ue] magis compositus.
					</marginalia_text>
					<person name="Duns Scotus"/>
					<person name="Guillaume Durand"/>
					<person name="Jean Bodin"/>
					<person name="Lipsius"/>
				</position>
			</language>
			<translation>He who is not more subtle than Duns Scotus is blunt. He who is not more skillful than Guillaume Durand is wild. He who is not more composite than Jean Bodin and Lipsius
			is a simple politician.</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Dia[e]ta Cordialis.
					</marginalia_text>
				</position>
			</language>
			<translation>A hearty regimen.</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						The most precious &amp; souerain thing in the world, next diuine Witt; is a mans
						Natural heate, &amp; radicall humour: which abooue allthings deserues to be mightily
					</marginalia_text>
				</position>
				<position book_orientation="90" place="intext">
					<marginalia_text>
						preserued w[i]th all the Cordials, and
						restoratiues vnder the Sun.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Moderata Venus iuueni prodest: viro nec prodest, nec obest:
						seni nocet maximè. Omnis luxuria senectutum reddit inualida[m],
					</marginalia_text>
					<person name="Venus"/>
				</position>
				<position book_orientation="270" place="intext">
					<marginalia_text>
						eneruatam, infirma[m], a[e]gram, 
					</marginalia_text>
				</position>
				<position book_orientation="270" place="tail">
					<marginalia_text>
						decocta[m],
					</marginalia_text>
				</position>
				<position book_orientation="270" place="intext">
					<marginalia_text>
						effetam, exangue[m],
					</marginalia_text>
				</position>
				<position book_orientation="270" place="tail">
					<marginalia_text>
						exhaustam, vetula[m], decrepita[m].
					</marginalia_text>
				</position>
			</language>
			<translation>A temperate love is useful for young people: it is neither useful for a man, nor a nuisance. It greatly injures an old man.
			She renders all luxury of old men invalid, effeminate, weak, corrupt, ruined, worn out, feeble, exhausted, aging, and infirm.</translation>
		</marginalia>
		
