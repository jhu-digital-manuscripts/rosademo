	<page filename="FolgersHa2.172v.tif" pagination="168" reader="Harvey" signature="[L4v]"/>	<!-- ABO 177left -->
	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="0" place="head">
					<marginalia_text>
						A cordial minde, a souerain preseruatiue
						of Witt, &amp; strength.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position book_orientation="0" place="intext">
					<marginalia_text>
						Machiauellus gratias agat Ca[e]sari Borgia[e],
						eiusq[ue] patri Alexandro Sexto: qui tum
						vulpinandi artem tradebant Roma[e].
					</marginalia_text>
					<person name="Machiavelli"/>
					<person name="Cesare Borgia"/>
					<person name="Pope Alexander VI"/>
					<location name="Rome"/>
				</position>
			</language>
			<translation>Machiavelli thanks Cesare Borgia and his father Alexander VI: who then handed over the art of using trickery to Rome.</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="0" place="tail">
					<marginalia_text>
						Ironia, a present restoratiue at
						all oppositions, or afflictions.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position book_orientation="90" place="left_margin">
					<marginalia_text>
						The most Cordial spirit in the world: &amp; the most radical resolution
						of all men. But teuer with an amiable candour, as gratious as
					</marginalia_text>
				</position>
				<position book_orientation="90" place="intext">
					<marginalia_text>
						maybe.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian"> 
			<language ident="LA">
				<position book_orientation="270" place="right_margin">
					<marginalia_text>
						Mundus regitur vel perito, et profundo: vel callido, et subtili.
					</marginalia_text>
				</position>
			</language>
			<translation>The world is guided either by a skilled or profound person: or by a cunning or subtle one.</translation>
		</marginalia>
		
