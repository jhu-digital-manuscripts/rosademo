        <marginalia hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>7. Tarquinij Superbi historia tyrannica. Qui Legum aimis securus, Armoru[m] non satis curiosus. 
                        Nam aut magis iustum esse decuit; aut oportuit magis esse fortem.
                    </marginalia_text>
                    <person name="Lucius Tarquinius Superbus"/>
                </position>
            </language>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
