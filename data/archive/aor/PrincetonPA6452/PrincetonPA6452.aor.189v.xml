        <marginalia hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        Vnius hominis immensa vis: sed profundi mathematici, et subtilissimi mechanicj.
                    </marginalia_text>
                </position>
            </language>
            <translation>The huge power of one man, yet a profound mathematician and really fastidious engineer.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Archimedes; inuentor ac machinator bellicorum tormentoru[m], operumq[ue]" hand="Italian">
