        <marginalia anchor_text="ratio causae cuiusq[ue] postulabit, ordinabuntur: uno, ut ego censeo, excepto, ne à potentißimis ad leuißima decrescat              oratio" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Vnu[m] locando in vitiu[m] evita[n]du[m]</marginalia_text> 
                </position>
            </language>
            <translation>
              One fault in placing must be avoided.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Quidam executi sunt uerbosius, quibus placuit, proposita locorym communium materia, quo quaeq[ue] res modo dici posset, oste[n]dere," hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Non debent nec possu[n]t o[mn]iu[m] argume[n]toru[m] sedes ostendi.</marginalia_text>
                </position>
            </language>
            <translation>The places of all arguments neither has to nor can be revealed.</translation>
        </marginalia>
        
        <marginalia anchor_text="declamationes" hand="Italian">
