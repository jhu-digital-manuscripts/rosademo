    <annotation>
        
        <marginalia anchor_text="candelabra" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Candelabra
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Lamp-stands.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="sine controuersia obtinebant" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        sine co[n]trouersia obtinere
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To obtain without dispute.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="mittit homini munera satis largè: haec ad vsum domesticum" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        mittere munera satis largè ad vsu[m] domesticu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To send quite generous supplies for the ordinary household needs.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="exornat amplè magnificéque tricliniu[m]" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        exornare tricliniu[m] amplè magnificè
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To lay out the dining table lavishly and magnificently.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Quid multa?" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        quid multa?
                    </marginalia_text>
                </position>
            </language>
            <translation>
                How much?
            </translation>
        </marginalia>
        
        <marginalia anchor_text="pocula ex auro: quae vt mos est regius, &amp; maximè in Syria, ge[m]mis erant distincta clarissimis" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        pocula ge[m]mis distincta clariss[im]is
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A cup adorned with most splendid jewels.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="vas vinariu[m]" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        vas vinariu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Wine vessel.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="trulla excauata cum manubrio" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Trulla manubriu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A ladle, a handle.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="idoneu[m], satis grauem testem" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        testis idoneus grauis
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A suitable and grave witness.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="in exteris nationibus vsque ad vltimas terras peruagatu[m] est" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        in exteris natio[n]ib[us] vsq[ue] ad vltimas terras p[er]vagatum
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Travelled through foreign nations and to the uttermost regions.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Candelabru[m] e ge[m]mis clarissimis, opere mirabili perfectu[m]" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Candelabru[m] perfectum ] è ge[m]mis, clariss[im]is op[er]e mirabili
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A lamp stand, fashioned from the most splendid stones and with extraodinary craftsmanship.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="eximium, atque pulcherrimum donum" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        donu[m] eximiu[m] pulcherimu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                An offering, excellent and most beautiful.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Peruenit res ad istius aures" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        peruenit ad aures
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To come to attention.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Antiochus" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Antiochus
                    </marginalia_text>
                    <person name="Antiochus XIII Asiaticus"/>
                </position>
            </language>
            <translation>
                Antiochus XIII Asiaticus.
            </translation>
        </marginalia>

        <marginalia anchor_text="inuolucrísque reiectis" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        involucris reiectis
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Rejected with covers.
            </translation>
        </marginalia>
        
        <underline language="LA" method="pen" text="quasi verò hoc mihi non satis" type="straight"/>
        <underline language="LA" method="pen" text="sed tantum vos certiores Iudices facio" type="straight"/>
        <underline language="LA" method="pen" text="Venio nunc non iam da furtum, non ad auaritiam, non ad cupiditatem, sed ad eiusmodi facinus, in quo omnia nefaria contineri mihi,              atque inesse videantur: in quo dii immortales violati, existimatio atque authoritas nominis Populi Romani imminuta, hospitium spoliatum ac proditum, abalienati scelere istius à nobis omnes reges amicissimi,              nationésque, quae in eorum regno ac ditione sunt. nam" type="straight"/>
        <underline language="LA" method="pen" text="nam id sine controuersia obtinebant" type="straight"/>
        <underline language="LA" method="pen" text="quòd in eius regnum ac manus venerat is" type="straight"/>
        <underline language="LA" method="pen" text="haec ad vsum domesticum, vini, olei" type="straight"/>
        <underline language="LA" method="pen" text="exponit ea, quibus" type="straight"/>
        <underline language="LA" method="pen" text="omnibus curat rebus instructu[m], &amp; paratum vt sit co[n]uiuium" type="straight"/>
        <underline language="LA" method="pen" text="vt &amp; istu[m] copiose ornatu[m], &amp; se honorifice acceptum arbitraretur" type="straight"/>
        <underline language="LA" method="pen" text="quae vt mos est regius, &amp; maximè in Syria, ge[m]mis erant distincta clarissimis" type="straight"/>
        <underline language="LA" method="pen" text="de qua credo satis idoneu[m], satis grauem testem Q. Minutiu[m] dicere audistis" type="straight"/>
        <underline language="LA" method="pen" text="satis iucu[n]dum &amp; gratu[m] illud esse conuiuiu[m]" type="straight"/>
        <underline language="LA" method="pen" text="Nunc reliquu[m] Iudices attendite, de quo &amp; vos audistis" type="straight"/>
        <underline language="LA" method="pen" text="primu[m] audiet" type="straight"/>
        <underline language="LA" method="pen" text="&amp; clarius cum pulcheritudo eius recens ad oculos hominum, atque integra perueniret" type="straight"/>
        <underline language="LA" method="pen" text="Peruenit res ad istius aures nescio quomodo" type="straight"/>
        <underline language="LA" method="pen" text="Antiochus qui animo &amp; puerili esset &amp; regio" type="straight"/>
        
