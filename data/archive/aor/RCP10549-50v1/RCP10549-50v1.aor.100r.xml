    <annotation>
        
        <marginalia anchor_text="indemnatosafficiebat, hoc seruos damnatos" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        indemnatus damnatus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Uncondemned, condemned.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="tua iudicia rescindere, mihi succensere desinito" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        iudicia rescindere mihi succensere desinito
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To annul a sentence, you will cease to resent me [Loeb 293, 489].
            </translation>
        </marginalia>
        
        <marginalia anchor_text="nullam inuidiam in te, ne ex illis quidem rebus concitabo" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        co[n]citare invidiam
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To stir up hate.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="esset talis vir in carcere, in tenebris, in squalore, in sordibus" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        esse in carcere tenebris squallore sordibus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be in prison, darkness, filth, dirt.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="aditus misericordiae iudicum iampridem esse praeclusos" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        aditus esse pr[a]eclusos
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To debar entrance.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="formidines" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        formidines
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Fears.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="insimulatio" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Insimulatio
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Accusation.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="in his iniquitatibus vnu[m] haessse" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        herere in iniquitatibus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To become victim of outrages.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="moerore ac miseriis perditus" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        perditus moerore miserijs
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Ruined by torture and misery.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="praedandi genus ab isto in illo vno adhibitum ac te[n]tatum" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        pr[a]edandi gen[us] adhibitu[m] te[n]tatu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A method of robery tried and applied.
            </translation>
        </marginalia>
        
        <underline language="LA" method="pen" text="tamen" type="straight"/>
        <underline language="LA" method="pen" text="Non agam tam acerbè: non vtar ista accusatoria co[n]suetudine" type="straight"/>
        <underline language="LA" method="pen" text="siquid vindicatum seuere est, vt ex eo" type="straight"/>
        <underline language="LA" method="pen" text="inuidiam colligam. non agam ista ratione" type="straight"/>
        <underline language="LA" method="pen" text="Meo enim iure contendam: eum, qui suo iudicio condemnatus sit, iuratorum" type="straight"/>
        <underline language="LA" method="pen" text="Relinquam haec omnia: quae si velim persequi, facile ostendam tua crudelitate in alios, omnes tibi aditus midericoridae iudicum iampridem esse praeclusos" type="straight"/>
        <underline language="LA" method="pen" text="iam ipsis iudicibus isne mea argumentatione coniecturam" type="straight"/>
        <underline language="LA" method="pen" text="quod hoc genus praedandi, quàm improbum, quàm indignum" type="straight"/>
        <underline language="LA" method="pen" text="ea primùm breuiter" type="straight"/>
        <underline language="LA" method="pen" text="formidines similium" type="straight"/>
        <underline language="LA" method="pen" text="caeteros profecto multos ex his inco[m]modis pecunia se" type="straight"/>
        <underline language="LA" method="pen" text="à conspectu parentum" type="straight"/>
        <underline language="LA" method="pen" text="docuit, antè istius auaritiae, ac sceleri occurrere" type="straight"/>
        
