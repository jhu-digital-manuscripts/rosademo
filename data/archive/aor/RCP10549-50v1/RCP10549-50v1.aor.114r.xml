        <marginalia anchor_text="ingeniosi, &amp; periti &amp; aequi iudicis" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Iudex [ ingeniosus peritus [a]equus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                An able, skilled and just judge.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="animis agitare" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        a[nim]is agitare
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To revolve in one's mind.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="vnum est enim, &amp; simplex aurium iudicium &amp; promiscue &amp; communiter stultis ac sapientibus" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        vnu[m] Iudiciu[m] et stultis sapientib[us]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A single judgement by the foolish and the wise.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Quomodo noscatur prudens à stulto in iudicio
                    </marginalia_text>
                </position>
            </language>
            <translation>
                How the prudent may be distinguished from the foolish by a judgement.
            </translation>
        </marginalia>
        
