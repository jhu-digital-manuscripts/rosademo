    <annotation>
        
        <marginalia anchor_text="Venio nun ad illud tuum, Non deieci" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        venio ad illud tuu[m] no[n] deieci
                    </marginalia_text>
                </position>
            </language>
            <translation>
                I come now to your one. I didn't drive him out.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="optio detur" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        optione[m] dari
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be offered the choice.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="verbis &amp; literis, &amp; (vt dici solet) summo iure contenditur" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        verbis &amp; litteris co[n]tendere
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To appeal to the word and letters.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="aucupia verborum &amp; literaru[m] tendiculas" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        aucupia v[er]boru[m] literaru[m] tendicul[a]e
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Catches of words, snares of letters.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="inuenio in interdicto verbum vnum vbi delitescam" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Invenire verba vbi delitesca[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To find a word where to find shelter.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="iuris numeretur peritus" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Iurisperitus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Experienced in law.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="perperam: si recte" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        rectè ⚹ perpera[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Rightly, wrongly.
            </translation>
        </marginalia>

        <marginalia anchor_text="in eam rem non solm rationes afferret" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        in ea[m] re[m] r[ati]o[n]es affere 
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To adduce arguments from the issue.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Ro[ma] &amp; authoritas in disputa[n]do valet
                    </marginalia_text>
                    <location name="Rome"/>
                </position>
            </language>
            <translation>
                Roma and authority prevail in the disputation.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="interpretes" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Interpretes
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Intepreters.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="labefactio" hand="English_secretary">
            <language ident="EL">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        ρωπη <!--JG: misspelling for ῥοπή-->
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Inclination of the balance.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Ius Ciuile
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Civil law.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="sin peritis non putat esse obtemperandum, non homines laedit, sed leges ac iura labefactat" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="tail">
                    <marginalia_text>
                        Iura labefactat qui peritis no[n] putat eße obtemperandu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>He who does not think that [the laws] must be obeyed by experts, injures the laws. <!--JG: Unsure, difficult to render Dee's sentence--></translation>
        </marginalia>
        
        <marginalia hand="English_secretary">            
            <language ident="EL">
                <position book_orientation="0" place="tail">
                    <marginalia_text>
                        ρωπη <!--JG: misspelling for ῥοπή-->
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Inclination of the balance.
            </translation>
        </marginalia>
        
        <underline language="LA" method="pen" text="verbis interdicti non concluditur, tamen sententia iuris, atque" type="straight"/>
        <underline language="LA" method="pen" text="puto te ipsum Piso perspicere, quanto ista sit angustior" type="straight"/>
        <underline language="LA" method="pen" text="Si mehercule mihi non copioso homini ad dicendum, optio detur vtrum malim defendere, non esse deiectum eum, cui vi &amp; armis ingredienti sit occursum,              an armatos no[n] fuisse eos qui sine scutis ac sine ferro fuerint: omnino ad probandum vtranque rem videa[m] infermam, nugatoriámque esse" type="straight"/>
        <underline language="LA" method="pen" text="Atque illud in tota defensione tua mihi maxime mirum videbatur, te dicere iurisconsultorum authoritati obtemperari non oportere. quod ego, tametsi non nunc primum, neque in hac causa solum audio, tamen" type="straight"/>
        <underline language="LA" method="pen" text="contrà verbis" type="straight"/>
        <underline language="LA" method="pen" text="tum aucupia verborum &amp; literaru[m] tendiculas in" type="straight"/>
        <underline language="LA" method="pen" text="scriptum sequi, calumniatoris esse" type="straight"/>
        <underline language="LA" method="pen" text="cum tu sis is qui te verbo, literàque defendas" type="straight"/>
        <underline language="LA" method="pen" text="cum tua sint eae partes" type="straight"/>
        <underline language="LA" method="pen" text="Cum tua sit haec oratio" type="straight"/>
        <underline language="LA" method="pen" text="verbum vnum vbi delitescam" type="straight"/>
        <underline language="LA" method="pen" text="tamen non probasse" type="straight"/>
        <underline language="LA" method="pen" text="quia verbis oppugnare aequitatem videbatur" type="straight"/>
        <underline language="LA" method="pen" text="contrà, quàm ista causa postulasset, defendisse: tum illud vulgo in iudiciis, &amp; nonnu[n]quam ab ingeniosis hominibus defendi mihi mirum videri solet" type="straight"/>
        <underline language="LA" method="pen" text="nequee enim fieri potest vt aliud iudicari de iure, aliud responderi oporteat: nec vt quisquam iuris numeretur peritus, qui id statuat esse ius quod non oporteat iudicari" type="straight"/>
        <underline language="LA" method="pen" text="Centumuiros egit, vt contra iurisconsultos diceret: sed vt hoc doceret, illud quod Sceuola defendebat, non esse iuris: &amp; in eam rem non solum rationes afferret, sed etiam Q. Mutio socero suo, multísque peritissimis hominibus authoribus vteretur" type="straight"/>
        <underline language="LA" method="pen" text="qui autem interpretes iuris vituperat, si imperitos iuris esse dicit, de hominibus, non de iures ciuili detrahit: sin peritis non putat esse obtemperandum, non homines laedit, sed leges ac iura labefactat. quod vobis venire in mentem profecto necesse est, nihil esse in ciuitate tam diligenter, quam ius" type="straight"/>
        
