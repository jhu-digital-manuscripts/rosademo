                    <marginalia_text>
                        ostiu[m] oceani
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Portal of Ocean.
            </translation>
        </marginalia>
        
        <underline language="LA" method="pen" text="ineunte adolesce[n]tia" type="straight"/>
        <underline language="LA" method="pen" text="cum hoste conflixit" type="straight"/>
        <underline language="LA" method="pen" text="cum inimico concertauit" type="straight"/>
        <underline language="LA" method="pen" text="prouincias confecit" type="straight"/>
        <underline language="LA" method="pen" text="quod denique genus belli esse potest, in quo illum non exercuerit fortuna reipublicae?" type="straight"/>
        <underline language="LA" method="pen" text="non solum gesta ab hoc vno, sed etiam confecta" type="straight"/>
        <underline language="LA" method="pen" text="quae huius viri scientiam fugere possit" type="straight"/>
        <underline language="LA" method="pen" text="quae potest par oratio inueniri" type="straight"/>
        <underline language="LA" method="pen" text="labor in negociis, fortitudo in periculis, industria in agendo, celeritas in conficiendo, consilium in prouidendo: quae tantae sunt in hoc vno,              qua[n]ta in omnibus reliquis Imperatoribus, quos at vidimus, aut audiuimus, non fuerunt." type="straight"/>
        <underline language="LA" method="pen" text="Testis est Italia, quam ille ipse victor L. Sylla huius virtute" type="straight"/>
        <underline language="LA" method="pen" text="cinctam periculis" type="straight"/>
        <underline language="LA" method="pen" text="celeritate consilii explicauit" type="straight"/>
        <underline language="LA" method="pen" text="ipsoru[m] sanguine redundauit" type="straight"/>
        <underline language="LA" method="pen" text="ab hoc auxilium absente expetiuit: quod bellum expectatione Pompeii attentuatum atque imminutum est, aduentu sublatum ac sepultum" type="straight"/>
        <underline language="LA" method="pen" text="testes vero iam omnes orae, atque omnes" type="straight"/>
        <underline language="LA" method="pen" text="exterae gentes" type="double"/>
        <underline language="LA" method="pen" text="ac nationes" type="straight"/>
        <underline language="LA" method="pen" text="denique maria omnia, tum vniuersa, tum in singulis oris omnes sinus atque portus. quis" type="straight"/>
        <underline language="LA" method="pen" text="qui non se, aut mortis, aut seruitutis periculo" type="straight"/>
        <underline language="LA" method="pen" text="nauigaretur" type="straight"/>
        <underline language="LA" method="pen" text="aut ab omnibus Imperatoribus vno anno, aut omnibus annis ab vno Imperatore confici posse?" type="straight"/>
        <underline language="LA" method="pen" text="prouinciam tenuistis" type="straight"/>
        <underline language="LA" method="pen" text="longinqua commemoro" type="straight"/>
        <underline language="LA" method="pen" text="longe à domo bellare" type="straight"/>
        <underline language="LA" method="pen" text="&amp; propugnaculis imperii, sociorum fortunas, non sua tecta defendere" type="straight"/>
        <underline language="LA" method="pen" text="Sociis vestris ego mare clausum per hosce annos dicam fuisse, cum exercitus" type="straight"/>
        <underline language="LA" method="pen" text="nisi summa hyeme transmiserint" type="straight"/>
        <underline language="LA" method="pen" text="duodecim secures" type="straight"/>
        <underline language="LA" method="pen" text="captas esse commemorem, cum vestros portus, atque eos portus, quibus vitam &amp; spiritu[m] ducitis, in praedonu[m] potestate fuisse sciatis" type="straight"/>
        <underline language="LA" method="pen" text="ibi bellu[m] gesserat" type="straight"/>
        <underline language="LA" method="pen" text="atque illam labem, atque ignominia[m] Reipub." type="straight"/>
        <underline language="LA" method="pen" text="Ro. praepositus esset" type="straight"/>
        <underline language="LA" method="pen" text="luce[m] afferre Reipub. potuit" type="straight"/>
        <underline language="LA" method="pen" text="nunc nulla[m] intra oceani ostiu[m], praedonu[m] naue[m] esse" type="straight"/>
        <underline language="LA" method="pen" text="tame[n] à me in dice[n]do praetereu[n]da no[n] sunt. quis" type="straight"/>
        <underline language="LA" method="pen" text="breui te[m]pore, tot loca adire, tantos cursus conficere potuit" type="straight"/>
        
