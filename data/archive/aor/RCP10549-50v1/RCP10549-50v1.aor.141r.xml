    <annotation>
        
        <marginalia anchor_text="in huiusce legis periculum includatur" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        includi in periculum legis
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be included in the danger of law.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="ii qui se volunt posse omnia" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Ii qui se volunt posse o[mn]ia
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Those who want it all in their power.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Æquu[m] iudiciu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                An even judgement.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="C. Flauius Pusio, Cn. Titinnius, C. Mecoenas" hand="English_secretary">
            <language ident="LA">
