        <marginalia anchor_text="C. Marium, quem vere patrem patriae, parentem inquam vestrae libertatis, atque huiusce Reipublicae" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Caius Marius p[ate]r patria[e] parens libertatis parens Reip.
                    </marginalia_text>
                    <person name="Gaius Marius"/>
                </position>
            </language>
            <translation>
                Gaius Marius, father of the fatherland, parent of freedom, parent of the state.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="in fide non stetit" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        in fide stare
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be trusted.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="innumerabileis hostium copias in Italia fudisset" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        fundere innumerabiles copias
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To rout countless troops.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="religionem &amp; sanctimonia[m]" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        religio sanctimonia
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Holy and sacred estates.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="gloriae" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Gloria
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Glory.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="fistulas quibus aqua suppeditabatur" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        fistulis aqua[m] suppeditari
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To supply water with pipes.
            </translation>
        </marginalia>
        
