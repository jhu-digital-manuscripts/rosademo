        <marginalia anchor_text="latius opinione disseminatu[m] est hoc malu[m]" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        latius opinio[n]e disseminatu[m] est hoc malu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                'This evil has been sown more widely than you think' [Loeb 324, 141].
            </translation>
        </marginalia>
        
