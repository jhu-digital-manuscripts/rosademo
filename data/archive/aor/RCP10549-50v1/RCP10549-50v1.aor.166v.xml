        <marginalia anchor_text="qui autem in Republica sit hostis, eum ciuem esse nullo modo posse" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Nullus hostis in rep. est Ciuis
                    </marginalia_text>
                </position>
            </language>
            <translation>
                No enemy of the state is its citizen.
            </translation>
        </marginalia>
        
        <underline language="LA" method="pen" text="sed hanc tantam, tam exitiosam haberi coniurationem" type="straight"/>
        <underline language="LA" method="pen" text="videtis. huic si paucos putatis affines esse, vehementer erratis" type="straight"/>
        <underline language="LA" method="pen" text="seminatu[m] est hoc malu[m]: manauit non solu[m] per Italia[m], verumetiam tra[n]scendit Alpes" type="straight"/>
        <underline language="LA" method="pen" text="obscure serpens multas iam prouincias" type="straight"/>
        <underline language="LA" method="pen" text="qui haec delere conati sunt, morte esse multa[n]dos. altera[m]" type="straight"/>
        <underline language="LA" method="pen" text="spiritu" type="straight"/>
        <underline language="LA" method="pen" text="immortalibus non esse supplicii causa constituta[m], sed aut necessitate[m] naturae, aut laboru[m] miseriaru[m] quietem esse" type="straight"/>
        <underline language="LA" method="pen" text="sapientes nunquam inuiti, fortes etiam saepe libenter oppetiuerunt. vincula verò, &amp; ea sempiterna, certe ad singulare[m] poenam nefarii sceleris inuenta sunt" type="straight"/>
        <underline language="LA" method="pen" text="videtur ista res iniquitatem, si imperare velis: difficultatem, si rogare" type="straight"/>
        <underline language="LA" method="pen" text="horribiles custodias circundat, &amp; digna scelere" type="straight"/>
        <underline language="LA" method="pen" text="eripit etiam spem, quae sola homines in miseriis co[n]solari solet" type="straight"/>
        <underline language="LA" method="pen" text="aliqua in vita formido improbis esset posita, apud inferos eiusmodi quaeda[m] illi antiqui supplicia impiis constituta esse voluerunt,              quòd videlicet intelligebant his remotis non esse mortem ipsam pertimescendam" type="straight"/>
        <underline language="LA" method="pen" text="meorum periculorum rationes vtilitas Reipublicae" type="straight"/>
        <underline language="LA" method="pen" text="qui autem in Republica sit hostis, eum ciuem esse nullo" type="straight"/>
        
