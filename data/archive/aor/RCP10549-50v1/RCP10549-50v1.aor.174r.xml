        <underline language="LA" method="pen" text="nefariu[m] est facinus ignoscere" type="straight"/>
        <underline language="LA" method="pen" text="omnia peccata sunt paria. dixisti quippe" type="straight"/>
        <underline language="LA" method="pen" text="Non re ductus es, sed opinione" type="straight"/>
        <underline language="LA" method="pen" text="improbi, inquit hominis est me[n]dacio fallere" type="straight"/>
        <underline language="LA" method="pen" text="mutare sententiam, turpe est: exorari, scelus: misereri, flagitium" type="straight"/>
