    <annotation>
        
        <marginalia anchor_text="deus aliquis elapsus de coelo" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Deus no[n] descendit de co[e]lo
                    </marginalia_text>
                </position>
            </language>
            <translation>
                God did not descend from heaven.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="terraemotus" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Terr[a]emotus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                An earthquake.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="faciles sunt preces" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Preces ad deu[m] sunt faciles
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Prayers to god are easy.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="reficit &amp; recreat mentem" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        reficere recreare ] me[n]tem
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To restore and revive the mind.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="intueor &amp; contemplor" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        [ intueor co[n]templor ]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                I consider and contemplate.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="extimesco" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        extimesco
                    </marginalia_text>
                </position>
            </language>
            <translation>
                I dread.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="magna ratione fecisse" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        magna r[ati]o[n]e facere.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To have a cogent reason [Loeb 158, 409].
            </translation>
        </marginalia>
        
