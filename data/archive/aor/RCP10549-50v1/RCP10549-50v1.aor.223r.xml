    <page filename="RCP10549-50v1.223r.tif" pagination="425" reader="John Dee"/>
    <annotation>
        
        <marginalia anchor_text="[infligere secu]rim" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        infligere securim.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To inflict a blow upon the sovereignty.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="verbis exaggero" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        v[er]bis exaggero
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To magnify by words.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="odium vnquam barbaroru[m] tam immane ac tam crudele" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        odiu[m] immane crudele
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Hatred, tremendous and cruel.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="stante vrbe, &amp; curia" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        stante vrbe curia
                    </marginalia_text>
                </position>
            </language>
            <translation>
                While the city and the senate-house still stand.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="coronam dent ciuicam" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Corona[m] ciuica[m] dare
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To give the civil crown.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="periculum vitae tuae mecum sociare" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        sociare periculu[m] viti[a]e
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To risk your life.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="causae nostrae duces &amp; quasi signiferi" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        causs[a]e n[ost]r[a]e duces signiferi
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Leaders and standard-bearers of our cause.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="mandata sunt literis" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        mandare litteris
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To command by letters.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="propter eius magnitudinem dicta de scripto" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="tail">
                    <marginalia_text>
                        Oratio propter magnitudine[m], dicta de scripto
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A speech spoken from writing for its greatness.
            </translation>
        </marginalia>
        
        <underline language="LA" method="pen" text="quasi verò me tuo arbitratu, &amp; non meo gratum esse oporteat" type="straight"/>
        <underline language="LA" method="pen" text="Quamobrem de isto paulò post plura" type="straight"/>
        <underline language="LA" method="pen" text="tantum requiro, vtrum putes odium in me mediocre inimicorum fuisse" type="straight"/>
        <underline language="LA" method="pen" text="Respondebo tibi nunc Laterensis minus fortasse vehementer, quàm abs te sum prouocatus: sed profecto nec considerate minus, nec minus amice" type="straight"/>
        <underline language="LA" method="pen" text="Nam primum illud fuit asperius" type="straight"/>
        <underline language="LA" method="pen" text="causa paracuta" type="straight"/>
        <underline language="LA" method="pen" text="coronam dent ciuicam" type="straight"/>
        <underline language="LA" method="pen" text="atque discessu non lachrymis solum tuis, sed animo, corpore, copiis prosecutus esses" type="straight"/>
        <underline language="LA" method="pen" text="statuissémque eos solum nominare qui causae nostrae duces &amp; quasi signiferi fuissent" type="straight"/>
        <underline language="LA" method="pen" text="dicta de" type="straight"/>
        <underline language="LA" method="pen" text="tanti officii seritutem astringam testimonio sempiterno? nolo caetera quae à me mandata sunt literis, recitare: praetermitto illa,              ne aut proferre videar ad tempus, aut eo genere vti literarum, quod meis studiis aptius, quàm consuetudini iudiciorum esse videatur" type="straight"/>
        <underline language="LA" method="pen" text="Ei quidem qui pro vno laborarit, &amp; ipsum id non obtinuerit, dici Quousque, irride[n]tis magis est, quàm reprehendentis" type="straight"/>
        
