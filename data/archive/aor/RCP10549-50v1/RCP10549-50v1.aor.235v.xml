    <annotation>
        
        <marginalia anchor_text="helluabare" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        helluari.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To squander.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Posthumius" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Posthumius
                    </marginalia_text>
                    <person name="Posthumius"/>
                </position>
            </language>
            <translation>
                Posthumius.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="repulsam tulit" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Repulsa[m] ferre.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To reject.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="vt ita dicam" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        vt ita dica[m].
                    </marginalia_text>
                </position>
            </language>
            <translation>
                If I may say so.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="facit enim Iudices, vester iste in me animoru[m], oculorúmque contuitus" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        facere a[n]i[m]or[um] occuloru[m]q[ue] co[n]tuitus in alique[m].
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To direct the attention on someone with eyes and minds.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="pe[n]det rebus leuissimis" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        pendere reb[us] leuiss[im]is
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To depend on the smallest things.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="ludos apparatissimos, magnifice[n]tissimósque" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        ludi apparatiss[im]i magnifice[n]tiss[im]i.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Games, most splendid and magnificent.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Ludius" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Ludius
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A dancer.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="spectator, sed actor &amp; acroama, qui omnia sororis embolia noluit" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        spectator Actor Acroama ] emboliu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Spectator, actor and singer of the interlude.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="se ludis homo popularis co[m]misit" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        co[m]mittere se ludis.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To show oneself at the games [Loeb 309, 195].
            </translation>
        </marginalia>
        
        <marginalia anchor_text="ludos faciebat" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        facere ludos:
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To hold games.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="manibus passis gratias age[n]tes, &amp; lachrymantes gaudio" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        manib[us] passis gr[ati]as agere Lachrimantes gaudio
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To thank with hands stretched out and crying out of joy.
            </translation>
        </marginalia>
        
