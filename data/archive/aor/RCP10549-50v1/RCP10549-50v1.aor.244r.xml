        <marginalia anchor_text="infamia quidem est aspersus" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        infamia aspersus.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Guilty of complicity.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="hospitio Dionis teneba[n]tur" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        hospitio teneri
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be given hospitality.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="peratte[n]te" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        peratte[n]te
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Very attentively.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="ventitasse domu[m]" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        ventitare domu[m].
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To visit someone.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="fera quaedam sodalitas, &amp; planè pastoricia atque agrestis" hand="English_secretary"> 
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        societas fera pastorica agrestis
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A fellowship, wild, rural and rustic.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="germanorum Lupercorum" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Germani Luperci.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Genuine wolf-men [Loeb 447, 439].
            </translation>
        </marginalia>
        
        <marginalia anchor_text="conuiuium renuerit" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        co[n]uitiu[m] renuere
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To refuse a dinner.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="primoribus labris gustassent [...] extremis vt dicitur digitis attigissent [...] se ad frugem bonam, vt dicitur, recaepisse" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        p[ri]morib[us] labris gustare extremis digitis attingere recipere se ad bona[m] fruge[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To touch with their lips, to touch with the tip of a finger, to give themselves to the good crops.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="inuidia[m] Caelio velle conflare" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        invidia[m] co[n]flare.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To ignite hatred.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="perfugiis no[n] vtor" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        perfugijs vti.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To claim refuge.
            </translation>
        </marginalia>
        
        <underline language="LA" method="pen" text="perfacile est isti loco respondere, mihi praesertim à quo illa causa defensa" type="straight"/>
        <underline language="LA" method="pen" text="ergo haec remoueantur, vt aliquando in quibus causa nititur, ad ea veniamus" type="straight"/>
        <underline language="LA" method="pen" text="illa subtiliter ad criminandu[m] inducta oratio ad animos vestros sensim ac leniter accederet" type="straight"/>
        <underline language="LA" method="pen" text="egomet tam triste illud, &amp; tam asperum genus orationis horrebam" type="straight"/>
        <underline language="LA" method="pen" text="non me haec moue[n]t quae perspicue falsoa sunt" type="straight"/>
        <underline language="LA" method="pen" text="Sed haec omittam" type="straight"/>
        <underline language="LA" method="pen" text="respondebo. Deliciarum obiurgatio fuit longa, &amp; ea lenior, plúsque disputationis habuit quàm atrocitatis: quo etiam audita est attentius" type="straight"/>
        <underline language="LA" method="pen" text="verbis, voce maxima" type="straight"/>
        <underline language="LA" method="pen" text="tametsi probabam eius eloquentia[m], tamen non pertimesceba[m]. aliquot" type="straight"/>
        <underline language="LA" method="pen" text="Tibi autem Balbe respondebo" type="straight"/>
        <underline language="LA" method="pen" text="se ad frugem" type="straight"/>
        <underline language="LA" method="pen" text="&amp; ipsa natura produndit adolescentiae cupiditates: quae" type="straight"/>
        <underline language="LA" method="pen" text="nullius vitam labefactent, nullius domu[m] euertant, faciles &amp; tolerabiles haberi sole[n]t" type="straight"/>
        <underline language="LA" method="pen" text="omne illud silentium quod est orationi tributu[m] tuae, fuit ob eam causam, quòd vno reo proposito de multorum vitiis cogitabamus" type="straight"/>
        <underline language="LA" method="pen" text="dies iam me deficiet, si quae dici in eam sententia[m] possunt, coner exprimere" type="straight"/>
        <underline language="LA" method="pen" text="De corruptelis, de adulteriis, de proteruitate, de sumptibus, immensa oratio est: vt tibi reum neminem,              sed vitia proponas, res tamen ipsa &amp; copiose &amp; grauiter accusari potest" type="straight"/>
        <underline language="LA" method="pen" text="quos aculeos habeat seueritas grauitásque vestra, cum eos accusator erexerit in rem, in vitia, in mores, in te[m]pora,              emittere in homine[m] &amp; in reum: cu[m] is no[n] suo crimine, sed multoru[m] vitio sit in quodda[m] odium iniustu[m] vocatus" type="straight"/>
        <underline language="LA" method="pen" text="perfugiis no[n] vtor" type="straight"/>
        
