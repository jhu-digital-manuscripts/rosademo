    <annotation>
        
        <marginalia anchor_text="nihil apud hunc lautum, nihil elegans, nihil exquisitum (laudabo inimicum) ne magnopere quidem quicquam praeter libidines sumptuosum" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        lautu[m] elegans exquisitu[m] sumpuosu[m] ] 
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Tasteful, refined, elegant, exquisite.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="ludos" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        ludi
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Games.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="nihil scitote esse luxuriosius, nihil libidinosius, nihil posterius, nihil nequius" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        nihil luxuriosi[us] p[er]fidiosius posteri[us] nequius ] 
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Nothing more exuberant, treacherous, later, depraved.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="furunculus, nunc vero etiam rapax, quòd sordidus, quòd contumax, quòd superbus,              quòd fallax, quòd perfidiosus, quòd impudens, quò auax" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        furunculus rapax sordidus co[n]tumax sup[er]bus fallax p[er]fidiosus impudens audax
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Pilferer, rapacious, disgraceful, defiant, arrogant, deceitful, treacherous, shameless, audacious.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="subrancida" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        caro subrancida
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Rotting meat.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="galli cantum" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Galli cantus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                The song of the rooster.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Epicurei
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Epicureans.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="admissarius" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        admissarius
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Lewd.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="expiscatus" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        expiscari.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be searched.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="ad illius hanc orationem adhinniit" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        ad ha[n]c or[ati]o[n]em adhinnijt
                    </marginalia_text>
                </position>
            </language>
            <translation>
                He whined at his speech.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Poema" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Poema.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Poem.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="deuenit, aut potius incidit in" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        devenire incidere in
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To arrive, to meet.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="possit istius tanquam in speculo vita[m] intueri" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        possit ta[m]q[uam] in speculo istius vita[m] intueri.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Just as if one can behold his life in a mirror.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="philosophia" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        philosopia
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Philosophy.
            </translation>
        </marginalia>
        
