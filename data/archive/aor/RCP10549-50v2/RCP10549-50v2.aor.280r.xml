                </position>
            </language>
            <translation>In the colonnade.</translation>
        </marginalia>
        
        <marginalia anchor_text="vacuo animo illum audieba[m]" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>vacuo a[n]i[m]o audire.</marginalia_text>
                </position>
            </language>
