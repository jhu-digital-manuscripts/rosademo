        <marginalia anchor_text="sententiam quam adamauerunt, pugnacissime defendere, quàm sine pertinacia quod consta[n]tissime dicatur exquirer" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        pugnacissime
                        co[n]stantissime.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Very aggressively.
                Very constanly.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="cura studióque" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        cura
                        studiu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Care.
                Study.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="est obstructa difficultatibus, eáque est &amp; in ipsis rebus obscuritas, &amp; in iudiciis nostris infirmitas" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        Difficultas
                        obscuritas
                        infirmitas
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Difficulty.
                Obscurity.
                Infirmity.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="liberiores &amp; solutiores" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        liberiores
                        solutioros
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Freer.
                More unrestricted.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="nec vt omnia quae praescripta &amp; quasi imperata sint, defendamus, necessitate vlla cogimur" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>vt omnia qu[a]e p[rae]scripta [sunt - deleted] et quasi imp[er]ata sunt, defendam[us], nulla necessitate cogimur</marginalia_text>
                </position>
            </language>
            <translation>'We are bound by no compulsion to support all the dogmas laid down for us almost as edicts by certain masters' [Loeb 268, 475].</translation> 
        </marginalia>
       
        <marginalia anchor_text="cognitio multis est obstructa difficultatibus" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Cognitionis difficultas</marginalia_text>
