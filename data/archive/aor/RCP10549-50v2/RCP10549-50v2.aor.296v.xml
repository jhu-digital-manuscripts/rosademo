        <marginalia anchor_text="Itaque non ob ea solum inco[m]moda quae eueniunt improbis, fugiendum improbitate[m] putamus, sed multo etiam magis quòd cuius in animo versatur,              nunquam sinit eum respirare, nunqua[m] acquiescere" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Improbitatis poena.
                    </marginalia_text>
                </position>
            </language>
            <translation>The punishment of wickedness.</translation>
        </marginalia>
        
        <marginalia anchor_text="no[n] potest esse dubium quin id sit summum atque extremu[m] bonorum omnium" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Conclusio loquitur ip[s]am voluptate[m] su[m]mu[m] bonu[m] esse.
                    </marginalia_text>
                </position>
            </language>
            <translation>The conclusion states that pleasure itself is the greatest good.</translation>
        </marginalia>
        
        <marginalia anchor_text="Huic certae stabilíque sententiae quae sint coniuncta" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Huic sententia[e] co[n]iu[n]cta
                    </marginalia_text>
                </position>
            </language>
            <translation>Points related to this doctrine.</translation>
        </marginalia>
        
        <marginalia anchor_text="Animi aute[m] voluptates &amp; dolores nasci fatemur è corporis voluptatibus" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Animi voluptates nasci fatemur è corporis volup.
                    </marginalia_text>
                </position>
            </language>
            <translation>We acknowledge that pleasures of the mind arise from pleasures of the body.</translation>
        </marginalia>
        
        <marginalia anchor_text="nec ob eam causam no[n] multo maiores esse &amp; voluptates &amp; dolores animi quàm corporis" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        A[nim]i voluptas, maior.
                    </marginalia_text>
                </position>
            </language>
            <translation>Pleasure of the mind, greater.</translation>
        </marginalia>
        
        <marginalia anchor_text="Nam corpore nihil nisi praesens, &amp; quod adest sentire possumus: animo autem &amp; praeterita &amp; futura" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Solum pra[e]sens corpore se[n]tim[us], a[n]i[m]o pra[e]terita et futura.
                    </marginalia_text>
                </position>
            </language>
            <translation>We only feel the present in the body; in the mind we feel the past and the future.</translation>
        </marginalia>
        
        <marginalia anchor_text="quanta voluptas non dolere sit" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        No[n] dolere, magna volup.
                    </marginalia_text>
                </position>
            </language>
            <translation>Not feeling grief, a great pleasure.</translation>
        </marginalia>
        
        <marginalia anchor_text="Sed vt his bonis erigimur quae expectamus" hand="Italian">
