        <marginalia anchor_text="Clamat Epicurus is quem vos nimis voluptatibus esse deditum dicitis, non posse iucunde viui, nisi sapienter, honeste, iustáque viuatur:              nec sapienter, honeste, iuste, nisi iucunde" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Epicuri dictum.</marginalia_text>
                    <person name="Epicurus"/>
                </position>
            </language>
            <translation>A saying of Epicurus.</translation>
        </marginalia>
        
        <marginalia anchor_text="Neque enim ciuitas in seditione potest esse beata, nec in discordia dominorum domus" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Seditio et discordia nos spolia[n]t voluptatibus.</marginalia_text>
                </position>
            </language>
            <translation>Turmoil and discord deprive us of pleasure.</translation>
        </marginalia>
        
        <marginalia anchor_text="Animi autem morbi" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Animi Morbi.</marginalia_text>
                </position>
            </language>
            <translation>Sicknesses of the mind.</translation>
        </marginalia>
        
        <marginalia anchor_text="stultus" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Stultus.</marginalia_text>
                </position>
            </language>
            <translation>Stupid.</translation>
        </marginalia>
        
        <marginalia anchor_text="mors" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Mors.</marginalia_text>
                </position>
            </language>
            <translation>Death.</translation>
        </marginalia>
        
        <marginalia anchor_text="superstitio" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>superstitio</marginalia_text>
                </position>
            </language>
            <translation>Superstition.</translation>
        </marginalia>
        
        <marginalia anchor_text="in eorum vita nulla est intercapedo molestiae" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Hîc nulla est intercapedo Molestia[e].</marginalia_text>
                </position>
            </language>
            <translation>Here there is no respite from turmoil.</translation>
        </marginalia>
        
        <marginalia anchor_text="Igitur neque stultoru[m] quisquam beatus, neque sapientu[m] non beatus" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Omnis stultus miser et o[mn]is sapiens Beatus.</marginalia_text>
                </position>
            </language>
            <translation>All stupid people are miserable and all wise people are happy.</translation>
        </marginalia>
        
        <marginalia anchor_text="Stoici" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Stoici.</marginalia_text>
                </position>
            </language>
            <translation>The Stoics.</translation>
        </marginalia>
        
        <marginalia anchor_text="Sic enim ab Epicuro sapiens semper beatus inducitur" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Quomodo Epicurus est semp[er] in voluptate.</marginalia_text>
                    <person name="Epicurus"/>
                </position>
            </language>
            <translation>How Epicurus is always having pleasure.</translation>  
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        1 Spes. 2 Sensus. 3 Memoria.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                1. Hope. 2. The senses. 3. Memory.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="In Dialectica autem vestra nullam vim existimauit esse nec ad melius viuendum, nec ad commodius dissere[n]dum" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Epicurus dialecticam contemnit.
                    </marginalia_text>
                    <person name="Epicurus"/>
                </position>
            </language>
            <translation>Epicurus disregards dialectics.</translation>
        </marginalia>
        
        <marginalia anchor_text="Physicis" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Physica.
                    </marginalia_text>
                </position>
            </language>
            <translation>Natural philosophy.</translation>
        </marginalia>
        
        <marginalia anchor_text="morati" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Morati</marginalia_text>
                </position>
            </language>
            <translation>Civilised.</translation> 
        </marginalia>
        
        <marginalia anchor_text="non tam solido quàm splendido" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="tail">
                    <marginalia_text>no[n] ta[m] solido qua[m] splendido</marginalia_text>
                </position>
            </language>
            <translation>Not as solid as it is splendid.</translation>
        </marginalia>
        
