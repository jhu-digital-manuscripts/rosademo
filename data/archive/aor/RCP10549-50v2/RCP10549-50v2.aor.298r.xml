        </marginalia>
        
        <marginalia anchor_text="Is enim percontando atque interrogando elicere solebat eorum opiniones, quibuscum disserebat, vt ad ea quae hi respondissent, siquid videretur, diceret" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Socratis mos in dissere[n]do</marginalia_text>
                    <person name="Socrates"/>
                </position>
            </language>
            <translation>The habit of Socrates in discussion.</translation>
        </marginalia>
        
        <marginalia anchor_text="Archesilas" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Archesilas.</marginalia_text>
                    <person name="Arcesilaus"/>
                </position>
            </language>
            <translation>Arcesilaus.</translation>
        </marginalia>
        
        <marginalia anchor_text="qui quaesiuit aliquid tacet, quod quidem iam fit etiam in Academia; perpetua oratione contrà disputatur" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Academia[e] co[n]suedo or[ati]o[n]e p[er]petua disserere </marginalia_text>
                </position>
            </language>
            <translation> The habit of the Academy is to discuss [something] in an everlasting speech.</translation>  
        </marginalia>
        
        <marginalia anchor_text="videri" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>videri</marginalia_text>
                </position>
            </language>
            <translation>To seem.</translation>
        </marginalia>
        
        <marginalia anchor_text="no[n] enim solum Torquatus dixit quid sentiret, sed etiam cur" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Quid. Cur. Se[n]tit</marginalia_text>
                </position>
            </language>
            <translation>What. Why. He thinks.</translation>
        </marginalia>
        
        <marginalia anchor_text="tamen co[m]modius quum in rebus singulis insistas, &amp; intelligas quid quisque co[n]cedat, quid abnuat, ex rebus concessis concludi quod velis, &amp; ad exitum perueniri" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Commodior co[n]tende[n]di r[ati]o, breuibus digladiari argu.</marginalia_text>
                </position>
            </language>
            <translation>A more effective method of disputing, to fight with brief arguments.</translation>  
        </marginalia>
        
        <marginalia anchor_text="praescribere primùm debet vt quibusdam in formulis ea res agatur" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Quae sit res de qua</marginalia_text>
                </position>
            </language>
            <translation>What the matter may be, about which [they will speak].</translation> 
        </marginalia>
        
        <marginalia anchor_text="in Phaedro à Platone" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Plato in Pha[e]dro</marginalia_text>
                    <person name="Plato"/>
                    <book title="Phaedrus"/>
                </position>
            </language>
            <translation>Plato in the Phaedrus.</translation>
        </marginalia>
        
        <marginalia anchor_text="vt inter eos qui ambigu[n]t co[n]ueniat quid sit id de quo agatur" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Quid sit id de quo</marginalia_text>
                </position>
            </language>
            <translation>What it may be, about which [they speak].</translation>
        </marginalia>
        
        <marginalia anchor_text="Atqui haec patefactio quasi rerum opertaru[m], quum quid, quidque sit aperitur, definitio est" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Definitio quid sit.</marginalia_text>
                </position>
            </language>
            <translation>What definition may be.</translation>
        </marginalia>
        
        <marginalia anchor_text="patefactio" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="tail">
                    <marginalia_text>patefactio</marginalia_text>
                </position>
            </language>
            <translation>Opening up.</translation>
        </marginalia>
        
        <marginalia anchor_text="fertur quasi torrens oratio; oratione[m] rapidam" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="tail">
                    <marginalia_text>
                        or[ati]o rapida
                        or[atio] quasi torre[n]s lata.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Rapid speech.
                A speech delivered like a torrent.
            </translation>
        </marginalia>
        
