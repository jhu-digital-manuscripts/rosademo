            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Aphricani.</marginalia_text>
                </position>
            </language>
            <translation>The Africani.</translation>
        </marginalia>
        
        <marginalia anchor_text="Aut quis est qui maiorum, aut Aphricanorum, aut eius quem tu in ore semper habes proaui mei, caeterorúmque viroru[m] fortium,              atque omni virtute praestantium, facta, dicta, consilia cognoscens, nulla animo afficiatur voluptate" hand="Italian">
