        <underline language="LA" method="pen" text="quasi gestientis animi elatione[m] voluptariam" type="straight"/>
        <underline language="LA" method="pen" text="co[m]mune nobis est cum multorum aliorum philosophoru[m]" type="straight"/>
        <underline language="LA" method="pen" text="Sed haec quide[m] est perfacilis &amp; perexpedita defensio" type="straight"/>
        <underline language="LA" method="pen" text="aut auaritia tam ardenti, aut tam effraenatis cupiditatibus" type="straight"/>
        <underline language="LA" method="pen" text="multis partibus malit" type="straight"/>
        <underline language="LA" method="pen" text="tam agrestibus institutis" type="straight"/>
        <underline language="LA" method="pen" text="aut quis co[n]tra studia naturae tam veheme[n]ter obdurauit" type="straight"/>
        <underline language="LA" method="pen" text="abhorreat, eásque sine voluptate aut vtilitate aliqua no[n] requirat" type="straight"/>
        <underline language="LA" method="pen" text="quem tu in ore semper" type="straight"/>
        <underline language="LA" method="pen" text="honesta in familia institutus, &amp; educatus ingenue" type="straight"/>
        <underline language="LA" method="pen" text="eum, quem impure ac flagitiose putet viuere" type="straight"/>
        <underline language="LA" method="pen" text="varios, leues, futiles" type="straight"/>
        <underline language="LA" method="pen" text="quo minus homines tenebras &amp; solitudine[m] nacti, nullo dedecore se abstineant, nisi eos per se foeditate sua turpitudo ipsa deterreat" type="straight"/>
        <underline language="LA" method="pen" text="Constituto autem illo, de quo antè diximus, quod" type="straight"/>
        <underline language="LA" method="pen" text="Stultitiam autem &amp; temeritatem &amp; iniustitiam &amp; intemperantiam" type="straight"/>
        <underline language="LA" method="pen" text="Cato verbis illustribus, &amp; id quod vis declara[n]tibus" type="straight"/>
        <underline language="LA" method="pen" text="docere philosophiam, &amp; ei quasi ciuitatem dare, quae quidem adhuc peregrinari Romae videbatur, nec offerre sese nostris sermonibus,              &amp; ista maxime propter limatam" type="straight"/>
        <underline language="LA" method="pen" text="&amp; rerum &amp; verborum tenuitatem. Scio enim esse quosdam" type="straight"/>
        <underline language="LA" method="pen" text="qui quanuis lingua philosophari possint, nullis tamen partitionibus" type="straight"/>
        <underline language="LA" method="pen" text="nullis definitionibus" type="straight"/>
        <underline language="LA" method="pen" text="se modo probare, quibus natura tacita assentiatur" type="straight"/>
        <underline language="LA" method="pen" text="de quibus hic sermo est, nomina imponis, memoriae mando" type="straight"/>
        <underline language="LA" method="pen" text="Peripateticis mollius" type="straight"/>
        <underline language="LA" method="pen" text="dicendi non satis acuta propter ignoratione[m] dialecticae" type="straight"/>
        <underline language="LA" method="pen" text="exercitatione in dialecticis, summáque eloquentia" type="straight"/>
        
