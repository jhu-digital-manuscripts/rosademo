            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>perfacilis et p[er]expedita defensio</marginalia_text>
                </position>
            </language>
            <translation>A very easy and very much obtainable defence.</translation>
        </marginalia>
        
        <marginalia anchor_text="hae perturbationes vi aliqua naturali moue[n]tur: omnésque hae sunt genere quatuor" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Perturbationu[m] 4 genera.</marginalia_text>
                </position>
            </language>
            <translation>The four kinds of passion.</translation>
        </marginalia>
        
        <marginalia anchor_text="" hand="Italian">
            <language ident="EL">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>ἡδονή</marginalia_text>  
                </position>
            </language>
            <translation>Pleasure.</translation>
        </marginalia>
        
        <marginalia anchor_text="iudicia leuitatis" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Perturbationes sunt iudicia leuitatis.</marginalia_text>
                </position>
            </language>
            <translation>The passions are frivolous judgements.</translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Honesta per se expete[n]da, Turpia p[er] se fugienda.</marginalia_text>
                </position>
            </language>
            <translation>Honour must be sought through the self; dishonour must be fled through the self.</translation> 
        </marginalia>
        
