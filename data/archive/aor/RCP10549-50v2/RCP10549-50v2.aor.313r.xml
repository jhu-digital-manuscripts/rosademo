        <marginalia anchor_text="te[m]pori parere, &amp; sequi Deum, &amp; se noscere, &amp; nihil nimis" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
