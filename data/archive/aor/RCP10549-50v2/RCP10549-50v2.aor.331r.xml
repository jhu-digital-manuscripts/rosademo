        <marginalia anchor_text="Licuit esse otioso Themistocli" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        licuit esse otiose Themistocli
                    </marginalia_text>
                    <person name="Themistocles"/>
                </position>
            </language>
            <translation>
                'Themistocles might have had a quiet life' [Loeb 141, 39].
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Hercules" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Herculis propositu[m]
                    </marginalia_text>
                    <person name="Hercules"/>
                </position>
            </language>
            <translation>
                Hercules's way of life.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Nemo vnquam sine magna spe immortalitatis se pro patria offerret ad mortem" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Qui pro patria vitam in acie profundunt, quid sibi animo proponunt.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                They who sacrifice their lives for the fatherland, propose what for their minds.
            </translation>
        </marginalia>

