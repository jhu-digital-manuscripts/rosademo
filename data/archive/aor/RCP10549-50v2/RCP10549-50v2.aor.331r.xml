        <marginalia anchor_text="Quid poetae, nónne post mortem nobiitarivolunt?" hand="Italian"> 
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Poeta[e] nobilitari volunt
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Poets want to be famous.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="opifices" hand="Italian">
            <language ident="LA">
