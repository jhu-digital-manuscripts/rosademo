    <annotation>
        
        <marginalia anchor_text="obdormiscere, &amp; ita conniuentem somno consopiri sempiterno" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        obdormiscere som[n]o co[n]sopiri se[m]piterno
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To fall asleep, to be lulled into the eternal sleep.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="exticntionem" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        extinctio
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Extinction.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="remigremus" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        remigrare
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To return.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="exantlauisset omnes labores" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        exantlare labores.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To exhaust the burdens.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="velis passis pervehi" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        velis passis p[er]vehi
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To sail through under full sails.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="reflantibus ventis reiiciemur" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>
                        refla[n]tibus ve[n]tis reijci.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be thrown back by contrary winds.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="optabiles mortes fuisse cum gloria" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Mors cu[m] gloria, optabilis est
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Death with glory is desirable.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="melior Ennii, quàm Solonis oratio" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Melior Ennij q[uam] solonis or[ati]o
                    </marginalia_text>
                    <person name="Ennius"/>
                    <person name="Solon"/>
                </position>
            </language>
            <translation>
                The speech of Ennius is better than Solon's.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        In mortis aductu, quo cu[m] vultu excipiemus.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                In the distraction from death, which we will follow straight on.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="vis wuae generi consuleret humano" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        vis qua[e]da[m] Humano generi consulit
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A certan strength advises humankind.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Philosophi[a]e frucuts liberrimus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                The freest fruits of philosophy.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="philosophari sibi ait necesse esse" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Philosophari necesse est
                    </marginalia_text>
                </position>
            </language>
            <translation>
                It is necessary to philosophise.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="nota, cui non sint aut pleraque aut omnia" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Aut pleraq[ue] aut o[mn]ia philosopho nota
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Either the majority or all has been examined by a philosopher.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="Neoptolemi" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Neoptolemus.
                    </marginalia_text>
                    <person name="Pyrrhus"/>
                </position>
            </language>
            <translation>
                Neoptolemus.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="mortis effecta contemptio" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Mortis Contemptio.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                The contemplation of death.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="effectus eloquentiae est audientium approbatio" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Audientiu[m] approbatio, eloque[n]ti[a]e est effectus.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                The approval of the audience is the effect of eloquence. 
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Hic Salust[us] in catilina[e] initio
                    </marginalia_text>
                    <person name="Sallust"/>
                    <book title="De coniuratione Catilinae"/>
                </position>
            </language>
            <translation>
                 Here Sallust in the beginning of 'On the conspiracy of Catiline'.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        vita { occupata militaris
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Life, captured and military.
            </translation>
        </marginalia>
        
        <underline language="LA" method="pen" text="videmus optabiles mortes fuisse cum" type="straight"/>
        <underline language="LA" method="pen" text="vt homines morte[m] vel optare incipiant, vel certe timere desistant" type="straight"/>
        <underline language="LA" method="pen" text="obdormiscere" type="straight"/>
        <underline language="LA" method="pen" text="somno consopiri sempiterno" type="straight"/>
        <underline language="LA" method="pen" text="Nos vero siquid tale acciderit, vt à deo denuntiatum videatur vt exeamus è vita, laeti, &amp; agentes gratias pareamus,              emittíque nos è custodia, &amp; leuari vinculis arbitremur, vt aut in aeternam, &amp; planè in nostram domu[m] remigremus, aut omni sensu molestiáque" type="straight"/>
        <underline language="LA" method="pen" text="Sin autem nihil denuntiabitur, eo tamen simus animo, vt horribilem illu[m] diem aliis, nobis faustum putemus:              nihílque in malis ducamus quod sit vel à diis immortalibus, vel à natura pare[n]te omnium constitutu[m]. Non" type="straight"/>
        <underline language="LA" method="pen" text="nec id gigneret aut aleret, quod quum exantlauisset omnes labores, tum incideret in mortis malum sempiternu[m]" type="straight"/>
        <underline language="LA" method="pen" text="paratum nobis &amp; profugium putemus, quò vtinam velis passis peruehi liceat. Si" type="straight"/>
        <underline language="LA" method="pen" text="reflantibus ventis reiiciemur, tame[n] eodem paulò tardius referamur necesse est" type="straight"/>
        <underline language="LA" method="pen" text="praesertim nihil agens, agere melius? Sed non" type="straight"/>
        <underline language="LA" method="pen" text="tamen in vita occupata" type="straight"/>
        <underline language="LA" method="pen" text="militari, pauca ipsa multum saepe prosunt, &amp; ferunt fructus, sed non tantos, quanti ex vniuersa" type="straight"/>
        <underline language="LA" method="pen" text="videbatur mortis effecta" type="straight"/>
        <underline language="LA" method="pen" text="Nam quid id quod vitari non potest metuit, is viuere animo quieto nullo modo potest. Sed qui no[n] modo quia necesse est mori,              verumetiam quia nihil habet mors quod sit horrendum, mortem non timet, magnum is sibi praesidium ad beata[m] vitam" type="straight"/>
        <underline language="LA" method="pen" text="Sed si reperiebantur nonnulli, qui nihil laudarent nisi quod se imitari posse confiderent, quémque spera[n]di sibi,              eundem &amp; benedicendi finem proponere[n]t" type="straight"/>
         
