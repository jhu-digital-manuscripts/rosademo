            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Sapientia quid
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Wisdom that.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="nimia resecari oportere" hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Nimia resecari oportet.
                    </marginalia_text>
                </position>
            </language>
