                    <person name="Rodolf Torta"/>
                </position>
            </language>
            <translation>Rodolf Torta, a very unfair man.</translation>
        </marginalia>
        
        <marginalia anchor_text="Haraldo regi Danorum" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Haraldus Rex Danoru[m]</marginalia_text>
