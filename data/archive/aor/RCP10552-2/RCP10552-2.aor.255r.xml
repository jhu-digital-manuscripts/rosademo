        <marginalia hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="head">
                    <marginalia_text>J.D. Nota diuersitatem inter Comitem [ occensem - Gislebertum oxunensem - Thurstinu[s]</marginalia_text>
                    <person name="Gilbert, Count of Brionne"/>
                    <person name="Thurstan le Goz"/>
                   <location name="Eu"/>
                    <location name="Exmes"/>
                </position>
            </language>
            <translation>J.D. Note the difference between the Counts [ Eu - Gislebertum; Exmes - Thurstan.</translation>   
        </marginalia>

        <marginalia anchor_text="Gislebertus cognomento Crispinus" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Gislebertus Crispinus.</marginalia_text>
                    <person name="Gilbert, Count of Brionne"/>
                </position>
            </language>
            <translation>Gilbert Crispin.</translation>
        </marginalia>
        
        <marginalia hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>Will[ia]mus lib[er] gall[icus]</marginalia_text>
                </position>
            </language>
            <translation>William. The French book.</translation>
        </marginalia>
        
        <marginalia anchor_text="Oxunensem comitatum" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Oxunensis Comitatus</marginalia_text>
                    <location name="Exmes"/>
                </position>
            </language>
            <translation>The county of Exmes.</translation>
        </marginalia>
                
        <marginalia anchor_text="Argentonium" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Argentonium.</marginalia_text>
                    <location name="Argenton-les-Vallees"/> <!-- FSF: I am wondering if this again goes together with the marginalia above; Exmes is in the arrondissement of Argentan, so possibly this is referred to here -->
                </position>
            </language>
            <translation>Argenton-les-Vallees.</translation>
        </marginalia>
        
        <marginalia anchor_text="Thurstinus Oxunensis praeses" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Thurstanus pra[e]ses Oxunensis.</marginalia_text>
                    <person name="Thurstan le Goz"/>
                    <location name="Exmes"/>
                </position>
            </language>
            <translation>Thurstan, ruler of Exmes.</translation>
        </marginalia>
        
        <marginalia anchor_text="Falise Castellu[m]" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Castellum Falise.</marginalia_text>  <!-- DO: Should this be tagged as a location (Chateau de Falaise)? -->
                </position>
            </language>
            <translation>Falaise Castle.</translation>
        </marginalia>

        <marginalia anchor_text="vnaquaq[ue]" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="intext">
                    <marginalia_text>vndi[que]</marginalia_text>  
                </position>
            </language>
            <translation>On all sides.</translation>
        </marginalia>

        <marginalia anchor_text="profugus a patria extorris aufugit" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Thurstinus exulat</marginalia_text>
                    <person name="Thurstan le Goz"/>
                </position>
            </language>
            <translation>Thurstan exiled.</translation>
        </marginalia>
        
        <marginalia anchor_text="Robertus Archiepiscopus Rhotomagensis, cui successit Malgerius frater Roberti ducis" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Robertus Archiep[iscop]us. Malgerius. archiep[iscop]us</marginalia_text>
                    <person name="Robert II, Archbishop of Rouen"/>
                    <person name="Mauger, Archbishop of Rouen"/>
                </position>
            </language>
            <translation>Archbishop Robert. Archbishop Mauger.</translation>
        </marginalia>

        <marginalia anchor_text="Gulielmum Archasensem; elatus nobilitate generis" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Gulielmus Archase[n]s[is] elatus nobilitate generis [etc] quia Papia erat soror Canuti Regig[?] vt dicit liber gallicus.</marginalia_text>
                    <person name="William of Talou"/>
                    <person name="Pappia of Envermeu"/>
                    <person name="Cnut the Great"/>
                </position>
            </language>
            <translation>William of Arques raised with noble upbringing etc. because Pappia was the sister of King Cnut, so says the French book.</translation>  
            <!-- DO: Not sure about translation. I don't know why it would be 'Regig.' so have just translated it as if it were 'Regis'. Pappia wasn't Cnut's sister though, which makes me question if it might be something else... -->
            <!-- FSF: I am not sure either -->
        </marginalia>

        <marginalia hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Henricus. R[ex] Fr[ancorum]</marginalia_text>
                    <person name="Henry I of France"/>
                </position>
            </language>
            <translation>Henry, King of the Franks.</translation>
        </marginalia>

        <marginalia anchor_text="Inglaramus Abbatis ville comes" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Ingelramus Comes Abbevillamis.</marginalia_text>
                    <person name="Enguerrand I, Count of Ponthieu"/>
                </position>
            </language>
            <translation>Ingelram, Count of Abbeville.</translation>
        </marginalia>
      
        <marginalia anchor_text="Hugo cognome[n]to Bardulfus" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Hugo Bardurlfus.</marginalia_text>
                    <person name="Hugh I of Broyes"/>
                </position>
            </language>
            <translation>Hugh Bardolf.</translation>
        </marginalia>
        
        <marginalia anchor_text="ipse a natiuo solo in exilium discessit" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Guliel[mus] Archas[ensis] exul[at]</marginalia_text>
                    <person name="William of Talou"/>
                </position>
            </language>
            <translation>William of Arques is exiled.</translation>
        </marginalia>
        
        <marginalia hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>A[nno] 1038</marginalia_text>  <!-- DO: Last digit looks like a 4 changed into an 8 --> <!-- FSF: to me it looks as if he first wrote 4 and corrected it -->
                </position>
            </language>
            <translation>In the year 1038.</translation>
        </marginalia>
        
        <marginalia anchor_text="Cui successit Haroldus eius filius ex concubina nomine Elfina natus" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Elfina, concubina, Haraldus succedit</marginalia_text>
                    <person name="Aelfgifu of Northampton"/>
                    <person name="Harold Harefoot"/>
                </position>
            </language>
            <translation>Aelfgifu, a concubine; Harold succeeds.</translation>
        </marginalia>
        
        <marginalia anchor_text="Comitem Godwinum" hand="Italian" method="pen">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>Godwinus Comes</marginalia_text>
