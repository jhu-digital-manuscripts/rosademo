        <marginalia anchor_text="quare dixeru[n]t impares semper esse i[m]mutabilis sub[stantia]e" hand="Italian">
            <language ident="LA">
                <position book_orientation="0" place="left_margin">
                    <marginalia_text>
                        Impares numeri q[ua]re i[m]mutabilis substa[n]tia[e] putaba[n]tur.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Odd numbers were therefire considered unchangeable substances.
            </translation>
        </marginalia>
        
        <marginalia anchor_text="alteru[m] vero nihil factum est" hand="Italian">
