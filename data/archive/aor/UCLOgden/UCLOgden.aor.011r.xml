    <annotation>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Difficilia qu[a]e pulchra.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Difficult things are beautiful.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Cur res diuina[e] difficili inquisitione reruantur.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Why divine things are being destroyed again by a difficult investigation.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        qua r[ati]o[n]e res diuinas discamus 
                    </marginalia_text>
                </position>
            </language>
            <translation>
                By which means we may acquire knowledge of divine matters.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Discere est recordari.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Learning is to recollect.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position book_orientation="0" place="right_margin">
                    <marginalia_text>
                        Venere[m] et mercuriu[m] circa solem percurrere 
                    </marginalia_text>
                </position>
            </language>
            <translation>
                That Venus and Mercury run around the Sun.
            </translation>
        </marginalia>
        
