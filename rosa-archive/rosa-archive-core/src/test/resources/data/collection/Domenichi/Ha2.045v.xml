	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Arcana qua[e]dam ex Angeli Furij diuinis operibus,
					</marginalia_text>
					<person name="Angelus Furius"/>
					<emphasis method="chalk" type="straight"/>
				</position>
				<position place="left_margin" book_orientation="0">
					<marginalia_text>
						Euschemosyne, et Entelechia. Qua[e] sunt aurea Eutrapeli specula: ( 
					</marginalia_text>
					<person name="Eutrapelus"/>
					<emphasis method="chalk" type="straight"/>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						et pra[e]gnantissima mundi practica.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Refinement and Actualization are some of the secrets from the divine works of Angelus Furius.
				They are the golden mirrors of Eutrapelus and the most pregnant practice of the world.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( not a clock, but a mock.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="IT">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						amoroso, et ridicolo.)
					</marginalia_text>
				</position>
			</language>
			<translation>
				Loving and ridiculous.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="0">
					<marginalia_text>
						Flamma Sine fumo. A[e]therea
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						dia[e]ta, ars, actio: singula, omnia exquisita.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Fire without smoke. Art and action, a heavenly diet: all singular and exquisite things.
			</translation>
		</marginalia>		
		<marginalia hand="Italian">
			<language ident="ES">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Todos es nada.
					</marginalia_text>
				</position>
			</language>
			<translation>
				All for naught.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="0">
					<marginalia_text>
						Sine quotidiana Totius exercitatione,
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						continuaq[ue] partium agitatione; deflorescit
						vitalis vigor, ipsaq[ue] he[b]escit entelechia: res
					</marginalia_text>
				</position>
				<position place="left_margin" book_orientation="0">
					<marginalia_text>
						omniu[m] reru[m] potentissima.
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Labor omnia vincit: sed heroicus.
					</marginalia_text>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				Without daily exercise of the whole, and continual movement of every part, 
				one's vital vigor wanes, and actualization itself, the most potent thing of all things,
				becomes feeble. Work conquers all, but only heroic work.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="IT">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						ridicolo.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Ridiculous.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						press&egrave;.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Firmly.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Leui pollice grauissima. Arcanu[m]
						Eutrapeli Emblema.
					</marginalia_text>
					<person name="Eutrapelus"/>
					<emphasis method="chalk" type="straight"/>
				</position>
			</language>
			<translation>
				The most serious matter with a light touch. The hidden emblem of Eutrapelus.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Domat omnia Virtus: sed Virtus heroica: et Nescia stare loco.
					</marginalia_text>
					<X-ref person="Lucan" book_title="Pharsalia" language="LA" text="Nescia stare loco"/>
				</position>
			</language>
			<translation>
				Virtue conquers all things, but only heroic virtue. And "his virtue not knowing how to stand in one place."
			</translation>
		</marginalia>
		
